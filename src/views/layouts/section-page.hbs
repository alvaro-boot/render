                <div class="nav-title">
                    <i class="fas fa-compass"></i>
                    Navegación
                </div>
                <div class="nav-divider"></div>
            </div>
            
            <div class="nav-list">
                {{#each allSections}}
                    {{#if enabled}}
                    <a href="/api/v1/client-templates/{{../clientId}}/section/{{id}}" 
