                            {{else if (eq id "services")}}⚙️
                            {{else if (eq id "testimonials")}}💬
                            {{else if (eq id "gallery")}}🖼️
                            {{else if (eq id "contact")}}📞
                            {{else if (eq id "cart")}}🛒
