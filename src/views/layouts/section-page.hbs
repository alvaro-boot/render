<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    {{!-- Meta Tags SEO Dinámicos --}}
    <title>{{#if data.title}}{{data.title}} | {{company.name}}{{else}}{{company.name}} | {{#if currentSectionId}}{{getSectionDisplayName currentSectionId}}{{else}}Sección{{/if}}{{/if}}</title>
    <meta name="description" content="{{#if data.description}}{{data.description}}{{else}}{{company.description}}{{/if}}">
    <meta name="keywords" content="{{#if data.keywords}}{{data.keywords}}{{else}}{{company.name}}, {{#if currentSectionId}}{{getSectionDisplayName currentSectionId}}{{else}}sitio web{{/if}}{{/if}}">
    <meta name="author" content="{{company.name}}">
    <meta name="robots" content="index, follow">
    
    {{!-- Open Graph / Facebook --}}
    <meta property="og:type" content="website">
    <meta property="og:url" content="{{#if data.canonicalUrl}}{{data.canonicalUrl}}{{else}}https://{{company.domain}}/{{#if currentSectionId}}{{currentSectionId}}{{else}}pages{{/if}}{{/if}}">
    <meta property="og:title" content="{{#if data.title}}{{data.title}}{{else}}{{company.name}}{{/if}}">
    <meta property="og:description" content="{{#if data.description}}{{data.description}}{{else}}{{company.description}}{{/if}}">
    <meta property="og:image" content="{{#if data.ogImage}}{{data.ogImage}}{{else}}{{company.logo}}{{/if}}">
    <meta property="og:site_name" content="{{company.name}}">
    
    {{!-- Twitter --}}
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content="{{#if data.canonicalUrl}}{{data.canonicalUrl}}{{else}}https://{{company.domain}}/{{#if currentSectionId}}{{currentSectionId}}{{else}}pages{{/if}}{{/if}}">
    <meta property="twitter:title" content="{{#if data.title}}{{data.title}}{{else}}{{company.name}}{{/if}}">
    <meta property="twitter:description" content="{{#if data.description}}{{data.description}}{{else}}{{company.description}}{{/if}}">
    <meta property="twitter:image" content="{{#if data.ogImage}}{{data.ogImage}}{{else}}{{company.logo}}{{/if}}">
    
    {{!-- Canonical URL --}}
    <link rel="canonical" href="{{#if data.canonicalUrl}}{{data.canonicalUrl}}{{else}}https://{{company.domain}}/{{#if currentSectionId}}{{currentSectionId}}{{else}}pages{{/if}}{{/if}}">
    
    {{!-- Favicon y Iconos --}}
    <link rel="icon" href="{{company.favicon}}">
    <link rel="apple-touch-icon" href="{{company.favicon}}">
    
    {{!-- Preconnect para mejor performance --}}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="preconnect" href="https://cdn.tailwindcss.com">
    <link rel="preconnect" href="https://cdnjs.cloudflare.com">
    
    {{!-- Fuentes y CSS --}}
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400;500;600;700&family=Poppins:wght@300;400;500;600;700&family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    {{!-- Incluir estilos según el estilo elegido --}}
    {{#if (eq style "clasico")}}
        {{> styles/clasico}}
    {{else if (eq style "moderno")}}
        {{> styles/moderno}}
    {{else if (eq style "minimalista")}}
        {{> styles/minimalista}}
    {{else if (eq style "colorido")}}
        {{> styles/colorido}}
    {{/if}}

    {{!-- Schema.org Structured Data --}}
    <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "{{#if (eq currentSectionId "products")}}Product{{else if (eq currentSectionId "services")}}Service{{else}}WebPage{{/if}}",
        "name": "{{#if data.title}}{{data.title}}{{else}}{{company.name}}{{/if}}",
        "description": "{{#if data.description}}{{data.description}}{{else}}{{company.description}}{{/if}}",
        "url": "{{#if data.canonicalUrl}}{{data.canonicalUrl}}{{else}}https://{{company.domain}}/{{#if currentSectionId}}{{currentSectionId}}{{else}}pages{{/if}}{{/if}}",
        "mainEntity": {
            "@type": "Organization",
            "name": "{{company.name}}",
            "description": "{{company.description}}",
            "url": "https://{{company.domain}}",
            "logo": "{{company.logo}}",
            "contactPoint": {
                "@type": "ContactPoint",
                "telephone": "{{#if company.phone}}{{company.phone}}{{else}}+1-555-123-4567{{/if}}",
                "contactType": "customer service"
            }
        },
        "publisher": {
            "@type": "Organization",
            "name": "{{company.name}}",
            "logo": {
                "@type": "ImageObject",
                "url": "{{company.logo}}"
            }
        },
        "potentialAction": {
            "@type": "SearchAction",
            "target": "https://{{company.domain}}/search?q={search_term_string}",
            "query-input": "required name=search_term_string"
        }
    }
    </script>

    <style>
        :root {
            --primary-color: hsl({{#if (eq style "clasico")}}340 82% 52%{{else if (eq style "moderno")}}220 14% 96%{{else if (eq style "minimalista")}}220 9% 46%{{else if (eq style "colorido")}}45 93% 47%{{else}}340 82% 52%{{/if}});
            --primary-foreground: hsl({{#if (eq style "clasico")}}0 0% 100%{{else if (eq style "moderno")}}220 9% 46%{{else if (eq style "minimalista")}}0 0% 100%{{else if (eq style "colorido")}}0 0% 100%{{else}}0 0% 100%{{/if}});
            --accent-color: hsl({{#if (eq style "clasico")}}120 61% 34%{{else if (eq style "moderno")}}220 14% 96%{{else if (eq style "minimalista")}}220 9% 46%{{else if (eq style "colorido")}}280 84% 60%{{else}}120 61% 34%{{/if}});
        }

        * {
            scroll-behavior: smooth;
        }

        body {
            font-family: 'Inter', sans-serif;
            line-height: 1.6;
            color: #374151;
            background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
        }

        /* Header y Navegación */
        .main-header {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-bottom: 1px solid rgba(0, 0, 0, 0.08);
            position: sticky;
            top: 0;
            z-index: 1000;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
        }

        .header-content {
            max-width: 1200px;
            margin: 0 auto;
            padding: 1rem 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .logo-section {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .logo {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--primary-color);
            text-decoration: none;
        }

        .breadcrumb-nav {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.875rem;
        }

        .breadcrumb-link {
            color: var(--primary-color);
            text-decoration: none;
            padding: 0.5rem 1rem;
            border-radius: 0.5rem;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .breadcrumb-link:hover {
            background: rgba(139, 92, 246, 0.1);
            transform: translateY(-1px);
        }

        .breadcrumb-separator {
            color: #9CA3AF;
            font-weight: 300;
        }

        .page-title {
            font-size: 1.25rem;
            font-weight: 600;
            color: #1F2937;
            margin: 0;
        }

        /* Navegación Flotante */
        .floating-nav {
            position: fixed;
            top: 50%;
            right: 2rem;
            transform: translateY(-50%);
            z-index: 1000;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 1.5rem;
            padding: 1.5rem;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
            border: 1px solid rgba(255, 255, 255, 0.3);
            transition: all 0.3s ease;
            max-width: 280px;
        }

        .floating-nav:hover {
            transform: translateY(-50%) scale(1.02);
            box-shadow: 0 25px 80px rgba(0, 0, 0, 0.2);
        }

        .nav-header {
            text-align: center;
            margin-bottom: 1rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid rgba(0, 0, 0, 0.1);
        }

        .nav-title {
            font-size: 0.875rem;
            font-weight: 600;
            color: #6B7280;
            margin-bottom: 0.5rem;
        }

        .nav-divider {
            width: 2rem;
            height: 2px;
            background: linear-gradient(90deg, var(--primary-color), var(--accent-color));
            margin: 0 auto;
            border-radius: 1px;
        }

        .nav-list {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
        }

        .nav-item {
            display: flex;
            align-items: center;
            padding: 0.75rem 1rem;
            border-radius: 0.75rem;
            text-decoration: none;
            color: #374151;
            font-size: 0.875rem;
            font-weight: 500;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            overflow: hidden;
        }

        .nav-item::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
            transition: left 0.5s;
        }

        .nav-item:hover::before {
            left: 100%;
        }

        .nav-item:hover {
            background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
            color: white;
            transform: translateX(-4px);
            box-shadow: 0 8px 25px rgba(139, 92, 246, 0.3);
        }

        .nav-item.active {
            background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
            color: white;
            box-shadow: 0 8px 25px rgba(139, 92, 246, 0.4);
        }

        .nav-icon {
            width: 1.5rem;
            height: 1.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 0.375rem;
            margin-right: 0.75rem;
            font-size: 0.875rem;
            background: rgba(139, 92, 246, 0.1);
        }

        .nav-item.active .nav-icon {
            background: rgba(255, 255, 255, 0.2);
        }

        /* Contenido Principal */
        .main-content {
            min-height: calc(100vh - 200px);
            padding: 3rem 0;
            max-width: 1200px;
            margin: 0 auto;
            padding-left: 2rem;
            padding-right: 2rem;
        }

        .content-wrapper {
            background: rgba(255, 255, 255, 0.8);
            backdrop-filter: blur(20px);
            border-radius: 1.5rem;
            padding: 3rem;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.3);
        }

        /* Footer */
        .main-footer {
            background: linear-gradient(135deg, #1f2937 0%, #111827 100%);
            color: white;
            padding: 3rem 0 2rem;
            margin-top: 4rem;
            position: relative;
            overflow: hidden;
        }

        .main-footer::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 1px;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
        }

        .footer-content {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 2rem;
            text-align: center;
            position: relative;
            z-index: 1;
        }

        .footer-header {
            margin-bottom: 2rem;
        }

        .footer-title {
            font-size: 1.5rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        .footer-description {
            color: #D1D5DB;
            font-size: 0.875rem;
        }

        .footer-stats {
            display: flex;
            justify-content: center;
            gap: 3rem;
            margin-bottom: 2rem;
            flex-wrap: wrap;
        }

        .stat-item {
            text-align: center;
        }

        .stat-number {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 0.25rem;
        }

        .stat-label {
            font-size: 0.75rem;
            color: #9CA3AF;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        .stat-number.blue { color: #60A5FA; }
        .stat-number.green { color: #34D399; }
        .stat-number.purple { color: #A78BFA; }

        .footer-divider {
            border-top: 1px solid #374151;
            margin: 2rem 0;
        }

        .footer-bottom {
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 1rem;
        }

        .footer-copyright {
            color: #9CA3AF;
            font-size: 0.875rem;
        }

        .footer-link {
            display: inline-flex;
            align-items: center;
            color: #60A5FA;
            text-decoration: none;
            font-weight: 500;
            padding: 0.75rem 1.5rem;
            border-radius: 0.75rem;
            transition: all 0.3s ease;
            background: rgba(96, 165, 250, 0.1);
            border: 1px solid rgba(96, 165, 250, 0.2);
        }

        .footer-link:hover {
            background: rgba(96, 165, 250, 0.2);
            color: #93C5FD;
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(96, 165, 250, 0.3);
        }

        .footer-link i {
            margin-right: 0.5rem;
        }

        /* Animaciones */
        .fade-in {
            animation: fadeIn 0.6s ease-in-out;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .slide-in-right {
            animation: slideInRight 0.5s ease-out;
        }

        @keyframes slideInRight {
            from { transform: translateX(100%); opacity: 0; }
            to { transform: translateX(0); opacity: 1; }
        }

        .loading-animation {
            animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
        }

        @keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.5; }
        }

        /* Responsive Design */
        @media (max-width: 1024px) {
            .floating-nav {
                right: 1rem;
                max-width: 240px;
            }
        }

        @media (max-width: 768px) {
            .header-content {
                flex-direction: column;
                gap: 1rem;
                text-align: center;
            }

            .floating-nav {
                position: fixed;
                bottom: 1rem;
                right: 1rem;
                top: auto;
                transform: none;
                border-radius: 1.25rem;
                padding: 1rem;
                max-width: 200px;
            }

            .floating-nav:hover {
                transform: scale(1.05);
            }

            .nav-list {
                gap: 0.25rem;
            }

            .nav-item {
                padding: 0.5rem 0.75rem;
                font-size: 0.75rem;
            }

            .nav-icon {
                width: 1.25rem;
                height: 1.25rem;
                font-size: 0.75rem;
                margin-right: 0.5rem;
            }

            .main-content {
                padding: 2rem 1rem;
            }

            .content-wrapper {
                padding: 2rem 1.5rem;
            }

            .footer-stats {
                gap: 2rem;
            }

            .footer-bottom {
                flex-direction: column;
                text-align: center;
            }
        }

        @media (max-width: 480px) {
            .floating-nav {
                right: 0.5rem;
                bottom: 0.5rem;
                padding: 0.75rem;
                max-width: 180px;
            }

            .nav-item {
                padding: 0.375rem 0.5rem;
                font-size: 0.6875rem;
            }

            .nav-icon {
                width: 1rem;
                height: 1rem;
                font-size: 0.625rem;
                margin-right: 0.375rem;
            }

            .content-wrapper {
                padding: 1.5rem 1rem;
            }

            .footer-stats {
                gap: 1.5rem;
            }

            .stat-number {
                font-size: 1.5rem;
            }
        }

        /* SEO Optimizations */
        .seo-content {
            position: absolute;
            left: -9999px;
            width: 1px;
            height: 1px;
            overflow: hidden;
        }

        .sitemap-links {
            display: none;
        }

        @media print {
            .floating-nav,
            .main-header {
                display: none !important;
            }
        }

        /* Scrollbar personalizada */
        ::-webkit-scrollbar {
            width: 8px;
        }

        ::-webkit-scrollbar-track {
            background: #f1f5f9;
        }

        ::-webkit-scrollbar-thumb {
            background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
            border-radius: 4px;
        }

        ::-webkit-scrollbar-thumb:hover {
            background: linear-gradient(135deg, var(--accent-color), var(--primary-color));
        }
    </style>
</head>
<body class="antialiased">
    {{!-- Sitemap Links para SEO (ocultos visualmente) --}}
    <div class="sitemap-links">
        {{#each allSections}}
            {{#if enabled}}
            <a href="/api/v1/client-templates/{{../clientId}}/section/{{id}}">{{getSectionDisplayName id}}</a>
            {{/if}}
        {{/each}}
    </div>

    <div class="min-h-screen flex flex-col">
        {{!-- Header mejorado --}}
        <header class="main-header">
            <div class="header-content">
                <div class="logo-section">
                    <a href="/api/v1/client-templates/{{clientId}}/pages" class="logo">
                        {{company.name}}
                    </a>
                </div>
                
                <nav class="breadcrumb-nav" aria-label="Breadcrumb">
                    <a href="/api/v1/client-templates/{{clientId}}/pages" class="breadcrumb-link">
                        <i class="fas fa-home"></i>
                        Inicio
                    </a>
                    <span class="breadcrumb-separator">/</span>
                    <span class="page-title">{{#if currentSectionId}}{{getSectionDisplayName currentSectionId}}{{else}}Sección{{/if}}</span>
