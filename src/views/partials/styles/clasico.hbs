<style>
    @tailwind base;
    @tailwind components;
    @tailwind utilities;

    /* ===== VARIABLES CSS ===== */
    @layer base {
        :root {
            --background: 0 0% 100%;
            --foreground: 222.2 84% 4.9%;
            --card: 0 0% 100%;
            --card-foreground: 222.2 84% 4.9%;
            --popover: 0 0% 100%;
            --popover-foreground: 222.2 84% 4.9%;
            --primary: {{theme.colors.primary}};
            --primary-foreground: {{theme.colors.primaryForeground}};
            --secondary: {{theme.colors.secondary}};
            --secondary-foreground: {{theme.colors.secondaryForeground}};
            --accent: {{theme.colors.accent}};
            --accent-foreground: {{theme.colors.accentForeground}};
            --muted: 210 40% 96%;
            --muted-foreground: 215.4 16.3% 46.9%;
            --destructive: 0 84.2% 60.2%;
            --destructive-foreground: 210 40% 98%;
            --border: 214.3 31.8% 91.4%;
            --input: 214.3 31.8% 91.4%;
            --ring: {{theme.colors.primary}};
            --radius: 2rem;
            
            /* Custom variables for elegant effects */
            --gradient-elegant: linear-gradient(135deg, hsl(var(--primary)) 0%, hsl(var(--secondary)) 100%);
            --gradient-subtle: linear-gradient(45deg, hsl(var(--primary)) 0%, hsl(var(--accent)) 50%, hsl(var(--secondary)) 100%);
            --shadow-elegant: 0 8px 32px rgba(0, 0, 0, 0.08);
            --shadow-medium: 0 16px 48px rgba(0, 0, 0, 0.12);
            --shadow-strong: 0 24px 64px rgba(0, 0, 0, 0.16);
            --shadow-glow: 0 0 20px rgba(var(--primary), 0.3);
        }
    }

    /* ===== BASE STYLES ===== */
    @layer base {
        * {
            border-color: hsl(var(--border));
        }
        
        body {
            background-color: hsl(var(--background));
            color: hsl(var(--foreground));
            font-family: {{theme.fonts.body}};
            line-height: 1.7;
            overflow-x: hidden;
        }
        
        h1, h2, h3, h4, h5, h6 {
            font-family: {{theme.fonts.heading}};
            font-weight: 600;
            line-height: 1.3;
            letter-spacing: -0.02em;
        }
        
        /* Smooth scrolling */
        html {
            scroll-behavior: smooth;
        }
        
        /* Selection styles */
        ::selection {
            background: hsl(var(--primary));
            color: hsl(var(--primary-foreground));
        }
        
        /* Scrollbar styling */
        ::-webkit-scrollbar {
            width: 8px;
        }
        
        ::-webkit-scrollbar-track {
            background: hsl(var(--muted));
            border-radius: 10px;
        }
        
        ::-webkit-scrollbar-thumb {
            background: var(--gradient-elegant);
            border-radius: 10px;
        }
        
        ::-webkit-scrollbar-thumb:hover {
            background: var(--gradient-subtle);
        }
    }

    /* ===== BUTTON COMPONENTS ===== */
    .btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        white-space: nowrap;
        border-radius: var(--radius);
        font-size: 0.875rem;
        font-weight: 500;
        height: 2.5rem;
        padding: 0 1.5rem;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;
        cursor: pointer;
        border: none;
        outline: none;
        text-decoration: none;
        letter-spacing: 0.025em;
    }
    
    .btn-primary {
        background: var(--gradient-elegant);
        color: hsl(var(--primary-foreground));
        box-shadow: var(--shadow-elegant);
        transform: translateY(0);
    }
    
    .btn-primary:hover {
        transform: translateY(-3px);
        box-shadow: var(--shadow-medium), var(--shadow-glow);
        background: var(--gradient-subtle);
    }
    
    .btn-primary:active {
        transform: translateY(-1px);
    }
    
    .btn-primary::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
        transition: left 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    }
    
    .btn-primary:hover::before {
        left: 100%;
    }
    
    .btn-outline {
        border: 2px solid hsl(var(--primary));
        background-color: transparent;
        color: hsl(var(--primary));
        position: relative;
        z-index: 1;
    }
    
    .btn-outline::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 0;
        height: 100%;
        background: var(--gradient-elegant);
        transition: width 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        z-index: -1;
    }
    
    .btn-outline:hover::before {
        width: 100%;
    }
    
    .btn-outline:hover {
        color: hsl(var(--primary-foreground));
        border-color: transparent;
        transform: translateY(-2px);
        box-shadow: var(--shadow-elegant);
    }
    
    .btn-lg {
        height: 3.5rem;
        padding: 0 2.5rem;
        font-size: 1.125rem;
        border-radius: calc(var(--radius) + 0.5rem);
    }
    
    .btn-xl {
        height: 4rem;
        padding: 0 3rem;
        font-size: 1.25rem;
        border-radius: calc(var(--radius) + 1rem);
    }

    /* ===== CARD COMPONENTS ===== */
    .flower-card {
        background: white;
        border-radius: var(--radius);
        box-shadow: var(--shadow-elegant);
        transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;
        border: 1px solid rgba(var(--primary), 0.05);
    }
    
    .flower-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: var(--gradient-elegant);
        transform: scaleX(0);
        transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    }
    
    .flower-card:hover::before {
        transform: scaleX(1);
    }
    
    .flower-card:hover {
        transform: translateY(-12px) scale(1.02);
        box-shadow: var(--shadow-strong);
        border-color: rgba(var(--primary), 0.1);
    }
    
    .flower-card::after {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
        transition: left 0.8s cubic-bezier(0.4, 0, 0.2, 1);
    }
    
    .flower-card:hover::after {
        left: 100%;
    }

    /* ===== GRADIENT EFFECTS ===== */
    .elegant-text {
        background: var(--gradient-elegant);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        background-size: 200% 200%;
        animation: gradient-shift 4s ease-in-out infinite;
    }
    
    @keyframes gradient-shift {
        0%, 100% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
    }
    
    .elegant-border {
        position: relative;
        border-radius: var(--radius);
        padding: 2px;
        background: var(--gradient-elegant);
    }
    
    .elegant-border > * {
        background: white;
        border-radius: calc(var(--radius) - 2px);
        padding: 1rem;
    }

    /* ===== ANIMATION COMPONENTS ===== */
    .floating-element {
        animation: float 8s ease-in-out infinite;
    }
    
    @keyframes float {
        0%, 100% { transform: translateY(0px) rotate(0deg); }
        33% { transform: translateY(-15px) rotate(1deg); }
        66% { transform: translateY(-8px) rotate(-1deg); }
    }
    
    .organic-shape {
        background: var(--gradient-elegant);
        border-radius: 60% 40% 30% 70% / 60% 30% 70% 40%;
        animation: morphing 12s ease-in-out infinite;
    }
    
    @keyframes morphing {
        0%, 100% { border-radius: 60% 40% 30% 70% / 60% 30% 70% 40%; }
        25% { border-radius: 30% 60% 70% 40% / 50% 60% 30% 60%; }
        50% { border-radius: 50% 60% 30% 60% / 60% 30% 60% 40%; }
        75% { border-radius: 60% 30% 60% 40% / 50% 60% 40% 60%; }
    }
    
    .petal {
        position: absolute;
        width: 20px;
        height: 20px;
        background: var(--gradient-elegant);
        border-radius: 50% 0 50% 50%;
        animation: petal-fall 20s linear infinite;
        opacity: 0.6;
    }
    
    @keyframes petal-fall {
        0% { 
            transform: translateY(-100vh) rotate(0deg) scale(0); 
            opacity: 0;
        }
        10% { 
            opacity: 0.6;
            transform: translateY(-90vh) rotate(36deg) scale(1);
        }
        90% { 
            opacity: 0.6;
            transform: translateY(10vh) rotate(324deg) scale(1);
        }
        100% { 
            transform: translateY(100vh) rotate(360deg) scale(0); 
            opacity: 0;
        }
    }

    /* ===== NAVIGATION COMPONENTS ===== */
    .navbar-elegant {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(20px);
        border-bottom: 1px solid rgba(var(--primary), 0.1);
        box-shadow: 0 2px 20px rgba(0, 0, 0, 0.05);
    }
    
    .nav-link {
        position: relative;
        transition: all 0.3s ease;
        font-weight: 500;
    }
    
    .nav-link::after {
        content: '';
        position: absolute;
        bottom: -5px;
        left: 0;
        width: 0;
        height: 2px;
        background: var(--gradient-elegant);
        transition: width 0.3s ease;
    }
    
    .nav-link:hover::after {
        width: 100%;
    }

    /* ===== HERO SECTION ===== */
    .hero-romantic {
        background: linear-gradient(135deg, 
            rgba(0, 0, 0, 0.4) 0%, 
            rgba(var(--primary), 0.2) 50%, 
            rgba(var(--secondary), 0.2) 100%);
        position: relative;
        overflow: hidden;
    }
    
    .hero-romantic::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="elegant-pattern" width="50" height="50" patternUnits="userSpaceOnUse"><circle cx="25" cy="25" r="1" fill="white" opacity="0.05"/></pattern></defs><rect width="100" height="100" fill="url(%23elegant-pattern)"/></svg>');
        animation: pattern-move 30s linear infinite;
    }
    
    @keyframes pattern-move {
        0% { transform: translate(0, 0); }
        100% { transform: translate(50px, 50px); }
    }

    /* ===== SECTION COMPONENTS ===== */
    .elegant-section {
        position: relative;
        overflow: hidden;
    }
    
    .elegant-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, 
            transparent, 
            rgba(255, 255, 255, 0.05), 
            transparent);
        animation: section-sweep 10s ease-in-out infinite;
    }
    
    @keyframes section-sweep {
        0% { left: -100%; }
        50% { left: 100%; }
        100% { left: 100%; }
    }
    
    .section-header {
        text-align: center;
        margin-bottom: 4rem;
    }
    
    .section-title {
        font-size: 2.5rem;
        margin-bottom: 1rem;
        background: var(--gradient-elegant);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }
    
    .section-subtitle {
        font-size: 1.125rem;
        color: hsl(var(--muted-foreground));
        max-width: 600px;
        margin: 0 auto;
        line-height: 1.6;
    }

    /* ===== FORM COMPONENTS ===== */
    .elegant-input {
        background: white;
        border: 2px solid hsl(var(--border));
        border-radius: var(--radius);
        padding: 0.875rem 1.25rem;
        transition: all 0.3s ease;
        outline: none;
        font-size: 1rem;
    }
    
    .elegant-input:focus {
        border-color: hsl(var(--primary));
        box-shadow: 0 0 0 3px rgba(var(--primary), 0.1);
        transform: translateY(-2px);
    }
    
    .elegant-textarea {
        background: white;
        border: 2px solid hsl(var(--border));
        border-radius: var(--radius);
        padding: 1.25rem;
        min-height: 120px;
        resize: vertical;
        transition: all 0.3s ease;
        outline: none;
        font-size: 1rem;
        line-height: 1.6;
    }
    
    .elegant-textarea:focus {
        border-color: hsl(var(--primary));
        box-shadow: 0 0 0 3px rgba(var(--primary), 0.1);
        transform: translateY(-2px);
    }

    /* ===== TESTIMONIAL COMPONENTS ===== */
    .testimonial-card {
        background: linear-gradient(135deg, 
            rgba(255, 255, 255, 0.95) 0%, 
            rgba(255, 255, 255, 0.9) 100%);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(var(--primary), 0.1);
        border-radius: var(--radius);
        padding: 2.5rem;
        position: relative;
        overflow: hidden;
        box-shadow: var(--shadow-elegant);
    }
    
    .testimonial-card::before {
        content: '"';
        position: absolute;
        top: -15px;
        left: 25px;
        font-size: 5rem;
        color: hsl(var(--primary));
        opacity: 0.2;
        font-family: serif;
    }
    
    .testimonial-card:hover {
        transform: translateY(-5px);
        box-shadow: var(--shadow-medium);
    }

    /* ===== SERVICE COMPONENTS ===== */
    .service-card {
        background: white;
        border-radius: var(--radius);
        padding: 2.5rem;
        box-shadow: var(--shadow-elegant);
        transition: all 0.4s ease;
        position: relative;
        overflow: hidden;
        border: 1px solid rgba(var(--primary), 0.05);
    }
    
    .service-card:hover {
        transform: translateY(-8px);
        box-shadow: var(--shadow-medium);
        border-color: rgba(var(--primary), 0.1);
    }
    
    .service-icon {
        width: 70px;
        height: 70px;
        border-radius: 50%;
        background: var(--gradient-elegant);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.75rem;
        margin-bottom: 1.5rem;
        position: relative;
        overflow: hidden;
        box-shadow: var(--shadow-elegant);
    }
    
    .service-icon::before {
        content: '';
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle, 
            rgba(255,255,255,0.3) 0%, 
            transparent 70%);
        animation: shimmer 4s ease-in-out infinite;
    }
    
    @keyframes shimmer {
        0%, 100% { transform: rotate(0deg); }
        50% { transform: rotate(180deg); }
    }

    /* ===== PRODUCT COMPONENTS ===== */
    .product-card {
        background: white;
        border-radius: var(--radius);
        overflow: hidden;
        box-shadow: var(--shadow-elegant);
        transition: all 0.4s ease;
        position: relative;
        border: 1px solid rgba(var(--primary), 0.05);
    }
    
    .product-card:hover {
        transform: translateY(-10px);
        box-shadow: var(--shadow-strong);
        border-color: rgba(var(--primary), 0.1);
    }
    
    .product-image {
        width: 100%;
        height: 220px;
        object-fit: cover;
        transition: transform 0.5s ease;
    }
    
    .product-card:hover .product-image {
        transform: scale(1.05);
    }
    
    .product-badge {
        position: absolute;
        top: 1rem;
        right: 1rem;
        background: var(--gradient-elegant);
        color: white;
        padding: 0.375rem 1rem;
        border-radius: 1.5rem;
        font-size: 0.75rem;
        font-weight: 600;
        box-shadow: var(--shadow-elegant);
    }

    /* ===== STATS COMPONENTS ===== */
    .stats-card {
        text-align: center;
        padding: 2.5rem;
        background: white;
        border-radius: var(--radius);
        box-shadow: var(--shadow-elegant);
        transition: all 0.4s ease;
        position: relative;
        overflow: hidden;
        border: 1px solid rgba(var(--primary), 0.05);
    }
    
    .stats-card:hover {
        transform: translateY(-8px);
        box-shadow: var(--shadow-medium);
        border-color: rgba(var(--primary), 0.1);
    }
    
    .stats-number {
        font-size: 3.5rem;
        font-weight: 700;
        background: var(--gradient-elegant);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 0.75rem;
        line-height: 1;
    }
    
    .stats-label {
        font-size: 1.125rem;
        color: hsl(var(--muted-foreground));
        font-weight: 500;
        line-height: 1.4;
    }

    /* ===== FOOTER COMPONENTS ===== */
    .elegant-footer {
        background: linear-gradient(135deg, 
            hsl(var(--primary)) 0%, 
            hsl(var(--secondary)) 100%);
        color: white;
        position: relative;
        overflow: hidden;
    }
    
    .footer-wave {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 120px;
        background: white;
        clip-path: polygon(0 100%, 100% 100%, 100% 0, 0 80%);
    }

    /* ===== RESPONSIVE DESIGN ===== */
    @media (max-width: 768px) {
        .btn-lg {
            height: 3rem;
            padding: 0 1.5rem;
            font-size: 1rem;
        }
        
        .section-title {
            font-size: 2rem;
        }
        
        .stats-number {
            font-size: 2.75rem;
        }
        
        .service-card,
        .testimonial-card {
            padding: 2rem;
        }
    }
    
    @media (max-width: 480px) {
        .btn-xl {
            height: 3.5rem;
            padding: 0 2rem;
            font-size: 1.125rem;
        }
        
        .section-title {
            font-size: 1.75rem;
        }
        
        .stats-card {
            padding: 2rem;
        }
    }

    /* ===== UTILITY CLASSES ===== */
    .text-gradient {
        background: var(--gradient-elegant);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }
    
    .bg-gradient {
        background: var(--gradient-elegant);
    }
    
    .border-gradient {
        border: 2px solid;
        border-image: var(--gradient-elegant) 1;
    }
    
    .shadow-glow {
        box-shadow: var(--shadow-glow);
    }
    
    .backdrop-blur {
        backdrop-filter: blur(20px);
    }
    
    .elegant-shadow {
        box-shadow: var(--shadow-elegant);
    }
    
    /* ===== ACCESSIBILITY & MOTION ===== */
    @layer base {
        a:focus-visible, .btn:focus-visible, button:focus-visible, input:focus-visible, textarea:focus-visible {
            outline: 3px solid hsl(var(--primary));
            outline-offset: 2px;
        }
    }
    @media (prefers-reduced-motion: reduce) {
        * { animation: none !important; transition: none !important; }
    }
</style>
