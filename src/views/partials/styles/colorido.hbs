<style>
    @tailwind base;
    @tailwind components;
    @tailwind utilities;

    /* ===== VARIABLES CSS ===== */
    @layer base {
        :root {
            --background: 0 0% 100%;
            --foreground: 222.2 84% 4.9%;
            --card: 0 0% 100%;
            --card-foreground: 222.2 84% 4.9%;
            --popover: 0 0% 100%;
            --popover-foreground: 222.2 84% 4.9%;
            --primary: {{theme.colors.primary}};
            --primary-foreground: {{theme.colors.primaryForeground}};
            --secondary: {{theme.colors.secondary}};
            --secondary-foreground: {{theme.colors.secondaryForeground}};
            --accent: {{theme.colors.accent}};
            --accent-foreground: {{theme.colors.accentForeground}};
            --muted: 210 40% 96%;
            --muted-foreground: 215.4 16.3% 46.9%;
            --destructive: 0 84.2% 60.2%;
            --destructive-foreground: 210 40% 98%;
            --border: 214.3 31.8% 91.4%;
            --input: 214.3 31.8% 91.4%;
            --ring: {{theme.colors.primary}};
            --radius: 1.5rem;
            
            /* Custom variables for enhanced effects */
            --gradient-primary: linear-gradient(135deg, hsl(var(--primary)) 0%, hsl(var(--accent)) 50%, hsl(var(--secondary)) 100%);
            --gradient-secondary: linear-gradient(45deg, hsl(var(--secondary)) 0%, hsl(var(--primary)) 50%, hsl(var(--accent)) 100%);
            --gradient-accent: linear-gradient(225deg, hsl(var(--accent)) 0%, hsl(var(--primary)) 50%, hsl(var(--secondary)) 100%);
            --shadow-soft: 0 10px 30px rgba(0, 0, 0, 0.1);
            --shadow-medium: 0 20px 50px rgba(0, 0, 0, 0.15);
            --shadow-strong: 0 30px 70px rgba(0, 0, 0, 0.2);
            --shadow-glow: 0 0 30px hsl(var(--primary));
        }
    }

    /* ===== BASE STYLES ===== */
    @layer base {
        * {
            border-color: hsl(var(--border));
        }
        
        body {
            background-color: hsl(var(--background));
            color: hsl(var(--foreground));
            font-family: {{theme.fonts.body}};
            line-height: 1.6;
            overflow-x: hidden;
        }
        
        h1, h2, h3, h4, h5, h6 {
            font-family: {{theme.fonts.heading}};
            font-weight: 700;
            line-height: 1.2;
        }
        
        /* Smooth scrolling */
        html {
            scroll-behavior: smooth;
        }
        
        /* Selection styles */
        ::selection {
            background: hsl(var(--primary));
            color: hsl(var(--primary-foreground));
        }
        
        /* Scrollbar styling */
        ::-webkit-scrollbar {
            width: 12px;
        }
        
        ::-webkit-scrollbar-track {
            background: hsl(var(--muted));
            border-radius: 10px;
        }
        
        ::-webkit-scrollbar-thumb {
            background: var(--gradient-primary);
            border-radius: 10px;
            border: 2px solid hsl(var(--muted));
        }
        
        ::-webkit-scrollbar-thumb:hover {
            background: var(--gradient-secondary);
        }
    }

    /* ===== BUTTON COMPONENTS ===== */
    .btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        white-space: nowrap;
        border-radius: var(--radius);
        font-size: 0.875rem;
        font-weight: 600;
        height: 2.5rem;
        padding: 0 1.5rem;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        cursor: pointer;
        border: none;
        outline: none;
        text-decoration: none;
    }
    
    .btn-primary {
        background: var(--gradient-primary);
        color: hsl(var(--primary-foreground));
        box-shadow: var(--shadow-soft);
        transform: perspective(1000px) rotateX(0deg);
    }
    
    .btn-primary:hover {
        transform: perspective(1000px) rotateX(10deg) translateY(-5px);
        box-shadow: var(--shadow-medium), var(--shadow-glow);
        background: var(--gradient-secondary);
    }
    
    .btn-primary:active {
        transform: perspective(1000px) rotateX(5deg) translateY(-2px);
    }
    
    .btn-primary::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255,255,255,0.4), transparent);
        transition: left 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    }
    
    .btn-primary:hover::before {
        left: 100%;
    }
    
    .btn-outline {
        border: 3px solid transparent;
        background: linear-gradient(white, white) padding-box,
                    var(--gradient-primary) border-box;
        color: hsl(var(--primary));
        position: relative;
        z-index: 1;
    }
    
    .btn-outline::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 0;
        height: 100%;
        background: var(--gradient-primary);
        transition: width 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        z-index: -1;
    }
    
    .btn-outline:hover::before {
        width: 100%;
    }
    
    .btn-outline:hover {
        color: hsl(var(--primary-foreground));
        border-color: transparent;
        transform: translateY(-3px);
        box-shadow: var(--shadow-soft);
    }
    
    .btn-lg {
        height: 3.5rem;
        padding: 0 2.5rem;
        font-size: 1.125rem;
        border-radius: calc(var(--radius) + 0.5rem);
    }
    
    .btn-xl {
        height: 4rem;
        padding: 0 3rem;
        font-size: 1.25rem;
        border-radius: calc(var(--radius) + 1rem);
    }

    /* ===== CARD COMPONENTS ===== */
    .colorful-card {
        background: white;
        border-radius: var(--radius);
        box-shadow: var(--shadow-soft);
        transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;
        border: 2px solid transparent;
    }
    
    .colorful-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 6px;
        background: var(--gradient-primary);
        transform: scaleX(0);
        transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    }
    
    .colorful-card:hover::before {
        transform: scaleX(1);
    }
    
    .colorful-card:hover {
        transform: translateY(-20px) scale(1.05);
        box-shadow: var(--shadow-strong);
        border-color: hsl(var(--primary));
    }
    
    .colorful-card::after {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
        transition: left 0.8s cubic-bezier(0.4, 0, 0.2, 1);
    }
    
    .colorful-card:hover::after {
        left: 100%;
    }

    /* ===== GRADIENT EFFECTS ===== */
    .rainbow-gradient {
        background: var(--gradient-primary);
        background-size: 300% 300%;
        animation: rainbow-shift 6s ease-in-out infinite;
    }
    
    @keyframes rainbow-shift {
        0%, 100% { background-position: 0% 50%; }
        25% { background-position: 100% 50%; }
        50% { background-position: 100% 100%; }
        75% { background-position: 0% 100%; }
    }
    
    .colorful-text {
        background: var(--gradient-primary);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        background-size: 200% 200%;
        animation: text-rainbow 4s ease-in-out infinite;
    }
    
    @keyframes text-rainbow {
        0%, 100% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
    }
    
    .gradient-border {
        position: relative;
        border-radius: var(--radius);
        padding: 3px;
        background: var(--gradient-primary);
    }
    
    .gradient-border > * {
        background: white;
        border-radius: calc(var(--radius) - 3px);
        padding: 1rem;
    }

    /* ===== ANIMATION COMPONENTS ===== */
    .bouncing-element {
        animation: bounce 3s ease-in-out infinite;
    }
    
    @keyframes bounce {
        0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
        40% { transform: translateY(-25px); }
        60% { transform: translateY(-12px); }
    }
    
    .pulse-glow {
        animation: pulse-glow 3s ease-in-out infinite;
    }
    
    @keyframes pulse-glow {
        0%, 100% { 
            box-shadow: 0 0 20px hsl(var(--primary));
        }
        50% { 
            box-shadow: 0 0 50px hsl(var(--accent)), 0 0 80px hsl(var(--secondary));
        }
    }
    
    .floating-bubble {
        position: absolute;
        border-radius: 50%;
        background: var(--gradient-primary);
        opacity: 0.6;
        animation: float-bubble 10s ease-in-out infinite;
    }
    
    @keyframes float-bubble {
        0%, 100% { 
            transform: translateY(0px) scale(1) rotate(0deg); 
            opacity: 0.6;
        }
        25% { 
            transform: translateY(-40px) scale(1.1) rotate(90deg); 
            opacity: 0.8;
        }
        50% { 
            transform: translateY(-80px) scale(0.9) rotate(180deg); 
            opacity: 0.4;
        }
        75% { 
            transform: translateY(-40px) scale(1.05) rotate(270deg); 
            opacity: 0.7;
        }
    }
    
    .colorful-icon {
        background: var(--gradient-primary);
        border-radius: 50%;
        position: relative;
        overflow: hidden;
        animation: rotate-gradient 6s linear infinite;
    }
    
    @keyframes rotate-gradient {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }
    
    .colorful-icon::before {
        content: '';
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle, 
            rgba(255,255,255,0.4) 0%, 
            transparent 70%);
        animation: shimmer-spin 4s ease-in-out infinite;
    }
    
    @keyframes shimmer-spin {
        0%, 100% { transform: rotate(0deg) scale(1); }
        50% { transform: rotate(180deg) scale(1.3); }
    }

    /* ===== NAVIGATION COMPONENTS ===== */
    .colorful-navbar {
        background: linear-gradient(135deg, 
            rgba(255, 255, 255, 0.95) 0%, 
            rgba(255, 255, 255, 0.9) 100%);
        backdrop-filter: blur(20px);
        border-bottom: 3px solid;
        border-image: var(--gradient-primary) 1;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }
    
    .nav-link {
        position: relative;
        transition: all 0.3s ease;
    }
    
    .nav-link::after {
        content: '';
        position: absolute;
        bottom: -5px;
        left: 0;
        width: 0;
        height: 3px;
        background: var(--gradient-primary);
        transition: width 0.3s ease;
    }
    
    .nav-link:hover::after {
        width: 100%;
    }

    /* ===== HERO SECTION ===== */
    .hero-colorful {
        background: linear-gradient(135deg, 
            rgba(0, 0, 0, 0.4) 0%, 
            rgba(0, 0, 0, 0.2) 50%, 
            rgba(0, 0, 0, 0.4) 100%),
        var(--gradient-primary);
        position: relative;
        overflow: hidden;
    }
    
    .hero-colorful::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="50" cy="50" r="1" fill="white" opacity="0.1"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
        animation: grain-move 20s linear infinite;
    }
    
    @keyframes grain-move {
        0% { transform: translate(0, 0); }
        100% { transform: translate(100px, 100px); }
    }

    /* ===== SECTION COMPONENTS ===== */
    .colorful-section {
        position: relative;
        overflow: hidden;
    }
    
    .colorful-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, 
            transparent, 
            rgba(255, 255, 255, 0.1), 
            transparent);
        animation: section-sweep 8s ease-in-out infinite;
    }
    
    @keyframes section-sweep {
        0% { left: -100%; }
        50% { left: 100%; }
        100% { left: 100%; }
    }
    
    .section-header {
        text-align: center;
        margin-bottom: 3rem;
    }
    
    .section-title {
        font-size: 2.5rem;
        margin-bottom: 1rem;
        background: var(--gradient-primary);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }
    
    .section-subtitle {
        font-size: 1.125rem;
        color: hsl(var(--muted-foreground));
        max-width: 600px;
        margin: 0 auto;
    }

    /* ===== FORM COMPONENTS ===== */
    .colorful-input {
        background: white;
        border: 2px solid hsl(var(--border));
        border-radius: var(--radius);
        padding: 0.75rem 1rem;
        transition: all 0.3s ease;
        outline: none;
    }
    
    .colorful-input:focus {
        border-color: hsl(var(--primary));
        box-shadow: 0 0 0 3px rgba(var(--primary), 0.1);
        transform: translateY(-2px);
    }
    
    .colorful-textarea {
        background: white;
        border: 2px solid hsl(var(--border));
        border-radius: var(--radius);
        padding: 1rem;
        min-height: 120px;
        resize: vertical;
        transition: all 0.3s ease;
        outline: none;
    }
    
    .colorful-textarea:focus {
        border-color: hsl(var(--primary));
        box-shadow: 0 0 0 3px rgba(var(--primary), 0.1);
        transform: translateY(-2px);
    }

    /* ===== TESTIMONIAL COMPONENTS ===== */
    .testimonial-card {
        background: linear-gradient(135deg, 
            rgba(255, 255, 255, 0.95) 0%, 
            rgba(255, 255, 255, 0.9) 100%);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(var(--primary), 0.1);
        border-radius: var(--radius);
        padding: 2rem;
        position: relative;
        overflow: hidden;
    }
    
    .testimonial-card::before {
        content: '"';
        position: absolute;
        top: -10px;
        left: 20px;
        font-size: 4rem;
        color: hsl(var(--primary));
        opacity: 0.3;
        font-family: serif;
    }

    /* ===== SERVICE COMPONENTS ===== */
    .service-card {
        background: white;
        border-radius: var(--radius);
        padding: 2rem;
        box-shadow: var(--shadow-soft);
        transition: all 0.4s ease;
        position: relative;
        overflow: hidden;
        border: 2px solid transparent;
    }
    
    .service-card:hover {
        transform: translateY(-10px);
        box-shadow: var(--shadow-medium);
        border-color: hsl(var(--primary));
    }
    
    .service-icon {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background: var(--gradient-primary);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        margin-bottom: 1rem;
        position: relative;
        overflow: hidden;
    }
    
    .service-icon::before {
        content: '';
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle, 
            rgba(255,255,255,0.4) 0%, 
            transparent 70%);
        animation: shimmer 3s ease-in-out infinite;
    }
    
    @keyframes shimmer {
        0%, 100% { transform: rotate(0deg); }
        50% { transform: rotate(180deg); }
    }

    /* ===== PRODUCT COMPONENTS ===== */
    .product-card {
        background: white;
        border-radius: var(--radius);
        overflow: hidden;
        box-shadow: var(--shadow-soft);
        transition: all 0.4s ease;
        position: relative;
    }
    
    .product-card:hover {
        transform: translateY(-15px);
        box-shadow: var(--shadow-strong);
    }
    
    .product-image {
        width: 100%;
        height: 200px;
        object-fit: cover;
        transition: transform 0.4s ease;
    }
    
    .product-card:hover .product-image {
        transform: scale(1.1);
    }
    
    .product-badge {
        position: absolute;
        top: 1rem;
        right: 1rem;
        background: var(--gradient-primary);
        color: white;
        padding: 0.25rem 0.75rem;
        border-radius: 1rem;
        font-size: 0.75rem;
        font-weight: 600;
    }

    /* ===== STATS COMPONENTS ===== */
    .stats-card {
        text-align: center;
        padding: 2rem;
        background: white;
        border-radius: var(--radius);
        box-shadow: var(--shadow-soft);
        transition: all 0.4s ease;
        position: relative;
        overflow: hidden;
    }
    
    .stats-card:hover {
        transform: translateY(-10px);
        box-shadow: var(--shadow-medium);
    }
    
    .stats-number {
        font-size: 3rem;
        font-weight: 700;
        background: var(--gradient-primary);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 0.5rem;
    }
    
    .stats-label {
        font-size: 1rem;
        color: hsl(var(--muted-foreground));
        font-weight: 500;
    }

    /* ===== FOOTER COMPONENTS ===== */
    .colorful-footer {
        background: linear-gradient(135deg, 
            hsl(var(--primary)) 0%, 
            hsl(var(--secondary)) 50%, 
            hsl(var(--accent)) 100%);
        color: white;
        position: relative;
        overflow: hidden;
    }
    
    .footer-wave {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100px;
        background: white;
        clip-path: polygon(0 100%, 100% 100%, 100% 0, 0 70%);
    }

    /* ===== RESPONSIVE DESIGN ===== */
    @media (max-width: 768px) {
        .btn-lg {
            height: 3rem;
            padding: 0 1.5rem;
            font-size: 1rem;
        }
        
        .section-title {
            font-size: 2rem;
        }
        
        .stats-number {
            font-size: 2.5rem;
        }
    }
    
    @media (max-width: 480px) {
        .btn-xl {
            height: 3.5rem;
            padding: 0 2rem;
            font-size: 1.125rem;
        }
        
        .section-title {
            font-size: 1.75rem;
        }
    }

    /* ===== UTILITY CLASSES ===== */
    .text-gradient {
        background: var(--gradient-primary);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }
    
    .bg-gradient {
        background: var(--gradient-primary);
    }
    
    .border-gradient {
        border: 2px solid;
        border-image: var(--gradient-primary) 1;
    }
    
    .shadow-glow {
        box-shadow: var(--shadow-glow);
    }
    
    .backdrop-blur {
        backdrop-filter: blur(20px);
    }

    /* ===== CARD LAYOUT VARIANTS ===== */
    .card-grid { display: grid; gap: 1.25rem; grid-template-columns: repeat(auto-fill, minmax(260px, 1fr)); }
    .card-padded { padding: 1.25rem; border-radius: var(--radius); }

    /* ===== ACCESSIBILITY & MOTION ===== */
    @layer base {
        a:focus-visible, .btn:focus-visible, button:focus-visible, input:focus-visible, textarea:focus-visible {
            outline: 3px solid hsl(var(--primary));
            outline-offset: 2px;
        }
    }
    @media (prefers-reduced-motion: reduce) {
        * { animation: none !important; transition: none !important; }
    }
</style>
