<section id="testimonials" class="py-16 {{#if (eq style 'minimalista')}}bg-gray-50{{else}}bg-white{{/if}}">
    <div class="container mx-auto px-4">
        <div class="text-center mb-12 section-header">
            <h2 class="section-title">{{data.title}}</h2>
            <p class="section-subtitle max-w-2xl mx-auto">{{data.subtitle}}</p>
        </div>
        
        <div class="grid grid-cols-1 {{#if (eq style 'moderno')}}md:grid-cols-3{{else}}md:grid-cols-2 lg:grid-cols-3{{/if}} gap-8">
            {{#each data.reviews}}
            <div class="{{#if (eq style 'clasico')}}testimonial-card{{/if}}{{#if (eq style 'moderno')}} testimonial-card{{/if}}{{#if (eq style 'minimalista')}} testimonial-card{{/if}}{{#if (eq style 'colorido')}} testimonial-card{{/if}}">
                <div class="flex items-center mb-4">
                    <div class="flex-shrink-0">
                        <img class="h-12 w-12 rounded-full" src="{{image}}" alt="{{name}}">
                    </div>
                    <div class="ml-4">
                        <h4 class="text-lg font-semibold text-gray-900">{{name}}</h4>
                        <p class="text-gray-600">{{role}}</p>
                    </div>
                </div>
                <p class="text-gray-700 italic">"{{content}}"</p>
                <div class="flex items-center mt-4">
                    {{#times rating}}
                    <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                    </svg>
                    {{/times}}
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>
