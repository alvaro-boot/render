<section id="about" class="py-24 {{#if (eq style 'minimalista')}}bg-gray-50{{else}}bg-white{{/if}}">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        {{#if isMultiPage}}
        <div class="mb-6">
            <a href="/api/v1/client-templates/{{../clientId}}/pages" class="btn btn-outline">‚Üê √çndice</a>
        </div>
        {{/if}}
        <div class="grid {{#if (eq style 'moderno')}}lg:grid-cols-3 gap-10{{else if (eq style 'minimalista')}}lg:grid-cols-2 gap-16{{else}}lg:grid-cols-2 gap-20{{/if}} items-center">
        <div>
            <h2 class="text-5xl font-bold text-gray-900 mb-8 section-title">{{data.title}}</h2>
            {{#each data.content}}
            <p class="text-lg text-gray-700 leading-relaxed {{#unless @last}}mb-6{{/unless}}">
                {{this}}
            </p>
            {{/each}}
            {{#if data.ctaButton}}
            <div class="mt-10">
                <a href="{{data.ctaButton.href}}" class="btn btn-primary btn-lg">{{data.ctaButton.text}}</a>
            </div>
            {{/if}}
        </div>
        <div class="relative {{#if (eq style 'moderno')}}col-span-2{{/if}}">
            <div class="{{#if (eq style 'clasico')}}organic-shape{{/if}}{{#if (eq style 'moderno')}} glass-card{{/if}}{{#if (eq style 'minimalista')}} minimal-card{{/if}}{{#if (eq style 'colorido')}} colorful-card{{/if}} aspect-square overflow-hidden shadow-2xl">
                <img src="{{data.image}}" alt="{{data.imageAlt}}" class="object-cover w-full h-full">
            </div>
            <div class="absolute -bottom-8 -right-8 {{#if (eq style 'moderno')}}modern-icon{{else if (eq style 'minimalista')}} minimal-accent{{else}}organic-shape{{/if}} w-32 h-32 flex items-center justify-center {{#if (eq style 'moderno')}}floating-animation{{else}}floating-element{{/if}}">
                <i class="text-4xl text-white">üå∫</i>
            </div>
        </div>
    </div>
</section>
