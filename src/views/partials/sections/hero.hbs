<section id="hero" class="relative min-h-screen flex items-center justify-center text-white" 
         style="background-image: url('{{data.backgroundImage}}'); background-size: cover; background-position: center;">
    <div class="absolute inset-0 {{#if (eq style 'clasico')}}hero-romantic{{/if}}{{#if (eq style 'moderno')}} hero-modern{{/if}}{{#if (eq style 'minimalista')}} hero-minimal{{/if}}{{#if (eq style 'colorido')}} hero-colorful{{/if}}"></div>
    <div class="relative z-10 text-center space-y-8 max-w-5xl mx-auto px-4">
        {{#if isMultiPage}}
        <div class="mb-6">
            <a href="/api/v1/client-templates/{{clientId}}/pages" class="btn btn-outline">‚Üê Volver al √≠ndice</a>
        </div>
        {{/if}}
        <div class="{{#if (eq style 'moderno')}}floating-animation{{else}}floating-element{{/if}}">
            <h1 class="text-7xl lg:text-9xl font-black leading-tight">
                <span class="{{#if (eq style 'moderno')}}modern-text-gradient{{else if (eq style 'colorido')}}colorful-text{{else}}elegant-text{{/if}}">{{data.title}}</span>
            </h1>
        </div>
        <p class="text-2xl lg:text-3xl text-gray-100 max-w-3xl mx-auto font-light">
            {{data.subtitle}}
        </p>
        {{#if data.ctaButtons}}
        <div class="flex flex-col sm:flex-row gap-6 justify-center pt-12">
            {{#each data.ctaButtons}}
            <a href="{{href}}" class="btn btn-lg btn-primary group">
                {{text}}
            </a>
            {{/each}}
        </div>
        {{/if}}
    </div>
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2">
        <div class="{{#if (eq style 'moderno')}}floating-animation{{else}}floating-element{{/if}}">
            <i class="text-3xl">üå∫</i>
        </div>
    </div>
</section>
