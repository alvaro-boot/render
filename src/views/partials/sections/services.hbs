{{!-- Sección de Servicios --}}
<section id="services" class="py-16 {{#if (eq style 'minimalista')}}bg-white{{else}}bg-gray-50{{/if}}">
    <div class="container mx-auto px-4">
        {{#if isMultiPage}}
        <div class="mb-6">
            <a href="/api/v1/client-templates/{{../clientId}}/pages" class="btn btn-outline">← Índice</a>
        </div>
        {{/if}}
        <div class="text-center mb-12 section-header">
            <h2 class="section-title">{{data.title}}</h2>
            <p class="section-subtitle max-w-2xl mx-auto">{{data.subtitle}}</p>
        </div>
        
        <div class="grid grid-cols-1 {{#if (eq style 'moderno')}}md:grid-cols-3 lg:grid-cols-4 gap-6{{else if (eq style 'minimalista')}}md:grid-cols-1 lg:grid-cols-2 gap-10{{else}}md:grid-cols-2 lg:grid-cols-3 gap-8{{/if}}">
            {{#each data.services}}
            <div class="{{#if (eq style 'clasico')}}service-card{{/if}}{{#if (eq style 'moderno')}} glass-card{{/if}}{{#if (eq style 'minimalista')}} minimal-card flex md:flex-row flex-col items-start gap-6{{/if}}{{#if (eq style 'colorido')}} service-card border-2 border-transparent gradient-border{{/if}}">
                <div class="{{#if (eq style 'moderno')}}modern-icon{{else if (eq style 'minimalista')}}minimal-icon flex-shrink-0{{else}}service-icon{{/if}}">{{icon}}</div>
                <h3 class="text-xl font-semibold text-gray-900 mb-3">{{title}}</h3>
                <p class="text-gray-600 mb-4">{{description}}</p>
                {{#if features}}
                <ul class="space-y-2">
                    {{#each features}}
                    <li class="flex items-center text-sm text-gray-600">
                        <svg class="w-4 h-4 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                        </svg>
                        {{this}}
                    </li>
                    {{/each}}
                </ul>
                {{/if}}
                {{#if price}}
                <div class="mt-4 pt-4 border-t border-gray-200">
                    <span class="text-2xl font-bold text-primary">{{price}}</span>
                </div>
                {{/if}}
            </div>
            {{/each}}
        </div>
    </div>
</section>
