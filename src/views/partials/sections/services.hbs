<section id="services" class="py-20 relative overflow-hidden">
    {{!-- Efectos de fondo animados --}}
    <div class="absolute inset-0 overflow-hidden">
        <div class="absolute top-20 left-20 w-72 h-72 bg-purple-300 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-blob"></div>
        <div class="absolute bottom-20 right-20 w-96 h-96 bg-blue-300 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-blob animation-delay-2000"></div>
        <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-80 h-80 bg-indigo-300 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-blob animation-delay-4000"></div>
    </div>

    <div class="max-w-7xl mx-auto px-6 relative z-10">
        {{#if isMultiPage}}
        <div class="mb-8 animate-fade-in-down">
            <a href="/api/v1/client-templates/{{../clientId}}/pages" 
               class="inline-flex items-center px-6 py-3 bg-white/10 backdrop-blur-sm text-gray-700 rounded-xl hover:bg-white/20 transition-all duration-300 border border-gray-200 hover:border-gray-300 hover:scale-105 shadow-lg">
                <i class="fas fa-arrow-left mr-2"></i>
                Volver al índice
            </a>
        </div>
        {{/if}}

        {{!-- Header de la sección mejorado --}}
        <div class="text-center mb-16 animate-fade-in-up">
            <h2 class="text-5xl lg:text-6xl font-bold text-gray-900 mb-6 animate-title">
                <span class="bg-gradient-to-r from-purple-600 via-blue-600 to-indigo-600 bg-clip-text text-transparent">
                    {{data.title}}
                </span>
            </h2>
            {{#if data.subtitle}}
            <p class="text-xl text-gray-600 max-w-3xl mx-auto animate-fade-in-up animation-delay-200">
                {{data.subtitle}}
            </p>
            {{/if}}
        </div>

        {{!-- Grid de servicios mejorado --}}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 animate-fade-in-up animation-delay-300">
            {{#each data.services}}
            <div class="service-card group bg-white/90 backdrop-blur-sm rounded-3xl shadow-xl hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-4 overflow-hidden border border-white/20">
                {{!-- Imagen del servicio --}}
                <div class="relative overflow-hidden">
                    {{#if image}}
                    <img src="{{image}}" alt="{{name}}" class="w-full h-48 object-cover group-hover:scale-110 transition-transform duration-500">
                    {{else}}
                    <div class="w-full h-48 bg-gradient-to-br from-purple-100 to-blue-100 flex items-center justify-center">
                        <i class="fas fa-cogs text-6xl text-purple-400 group-hover:scale-125 transition-transform duration-500"></i>
                    </div>
                    {{/if}}
                    
                    {{!-- Badge de categoría --}}
                    {{#if category}}
                    <div class="absolute top-4 left-4 px-3 py-1 bg-gradient-to-r from-purple-600 to-blue-600 text-white text-sm font-semibold rounded-full">
                        {{category}}
                    </div>
                    {{/if}}
                    
                    {{!-- Badge de popular --}}
                    {{#if popular}}
                    <div class="absolute top-4 right-4 px-3 py-1 bg-gradient-to-r from-yellow-500 to-orange-500 text-white text-sm font-semibold rounded-full animate-pulse">
                        Popular
                    </div>
                    {{/if}}
                    
                    {{!-- Efecto de brillo en hover --}}
                    <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent transform -skew-x-12 -translate-x-full group-hover:translate-x-full transition-transform duration-1000"></div>
                </div>

                {{!-- Contenido del servicio --}}
                <div class="p-6">
                    <div class="flex items-center mb-4">
                        <div class="w-12 h-12 bg-gradient-to-br from-purple-500 to-blue-500 rounded-xl flex items-center justify-center mr-4 group-hover:scale-110 transition-transform duration-300 shadow-lg">
                            <i class="text-xl text-white group-hover:animate-bounce">{{icon}}</i>
                        </div>
                        <h3 class="text-xl font-bold text-gray-900 group-hover:text-purple-600 transition-colors duration-300">
                            {{name}}
                        </h3>
                    </div>
                    
                    {{#if description}}
                    <p class="text-gray-600 mb-4 line-clamp-3 group-hover:text-gray-700 transition-colors duration-300">
                        {{description}}
                    </p>
                    {{/if}}

                    {{!-- Características del servicio --}}
                    {{#if features}}
                    <div class="mb-4">
                        <ul class="space-y-1">
                            {{#each features}}
                            <li class="flex items-center text-sm text-gray-600">
                                <i class="fas fa-check text-green-500 mr-2 group-hover:animate-bounce"></i>
                                {{this}}
                            </li>
                            {{/each}}
                        </ul>
                    </div>
                    {{/if}}

                    {{!-- Precio y botones --}}
                    <div class="flex items-center justify-between">
                        <div class="flex items-center space-x-2">
                            {{#if originalPrice}}
                            <span class="text-lg font-bold text-purple-600">{{price}}</span>
                            <span class="text-sm text-gray-400 line-through">{{originalPrice}}</span>
                            {{else}}
                            <span class="text-2xl font-bold text-purple-600">{{price}}</span>
                            {{/if}}
                        </div>
                        
                        <div class="flex space-x-2">
                            {{#if data.showDetailsButton}}
                            <button class="details-btn px-4 py-2 bg-gradient-to-r from-purple-600 to-blue-600 text-white rounded-lg hover:from-purple-700 hover:to-blue-700 transition-all duration-300 transform hover:-translate-y-1 hover:shadow-lg font-semibold text-sm">
                                <i class="fas fa-eye mr-1"></i>
                                Ver
                            </button>
                            {{/if}}
                            
                            {{#if data.showContactButton}}
                            <button class="contact-btn px-4 py-2 bg-gradient-to-r from-green-500 to-emerald-500 text-white rounded-lg hover:from-green-600 hover:to-emerald-600 transition-all duration-300 transform hover:-translate-y-1 hover:shadow-lg font-semibold text-sm">
                                <i class="fas fa-phone mr-1"></i>
                                Contactar
                            </button>
                            {{/if}}
                        </div>
                    </div>
                </div>

                {{!-- Indicador de hover --}}
                <div class="h-1 bg-gradient-to-r from-purple-500 via-blue-500 to-indigo-500 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-500"></div>
            </div>
            {{/each}}
        </div>

        {{!-- Sección de proceso de trabajo --}}
        {{#if data.process}}
        <div class="mt-20 bg-gradient-to-r from-purple-50 to-blue-50 rounded-3xl p-12 animate-fade-in-up animation-delay-400 relative overflow-hidden">
            {{!-- Efectos de fondo --}}
            <div class="absolute inset-0 bg-gradient-to-br from-purple-100/50 to-blue-100/50"></div>
            <div class="relative z-10">
                <h3 class="text-3xl font-bold text-gray-900 mb-8 text-center animate-title">
                    Nuestro Proceso de Trabajo
                </h3>
                
                <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
                    {{#each data.process}}
                    <div class="text-center group">
                        <div class="relative mb-6">
                            <div class="w-16 h-16 bg-gradient-to-br from-purple-500 to-blue-500 rounded-2xl flex items-center justify-center mx-auto group-hover:scale-110 transition-transform duration-300 shadow-lg">
                                <i class="text-2xl text-white group-hover:animate-bounce">{{icon}}</i>
                            </div>
                            {{!-- Número del paso --}}
                            <div class="absolute -top-2 -right-2 w-8 h-8 bg-gradient-to-br from-yellow-500 to-orange-500 rounded-full flex items-center justify-center text-white font-bold text-sm">
                                {{add @index 1}}
                            </div>
                        </div>
                        <h4 class="text-xl font-semibold text-gray-900 mb-2 group-hover:text-purple-600 transition-colors duration-300">{{title}}</h4>
                        <p class="text-gray-600 group-hover:text-gray-700 transition-colors duration-300">{{description}}</p>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
        {{/if}}

        {{!-- Sección de testimonios de servicios --}}
        {{#if data.testimonials}}
        <div class="mt-20 animate-fade-in-up animation-delay-500">
            <h3 class="text-3xl font-bold text-gray-900 mb-8 text-center animate-title">
                Lo que dicen nuestros clientes
            </h3>
            
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {{#each data.testimonials}}
                <div class="testimonial-card group bg-white/90 backdrop-blur-sm rounded-3xl p-6 shadow-xl hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2 border border-white/20">
                    <div class="flex items-center mb-4">
                        {{#if avatar}}
                        <img src="{{avatar}}" alt="{{name}}" class="w-12 h-12 rounded-full mr-4 group-hover:scale-110 transition-transform duration-300">
                        {{else}}
                        <div class="w-12 h-12 bg-gradient-to-br from-purple-500 to-blue-500 rounded-full flex items-center justify-center mr-4 group-hover:scale-110 transition-transform duration-300">
                            <i class="fas fa-user text-white"></i>
                        </div>
                        {{/if}}
                        <div>
                            <h4 class="font-semibold text-gray-900 group-hover:text-purple-600 transition-colors duration-300">{{name}}</h4>
                            <p class="text-sm text-gray-600">{{position}}</p>
                        </div>
                    </div>
                    
                    <p class="text-gray-700 mb-4 italic">"{{content}}"</p>
                    
                    <div class="flex items-center">
                        {{#times rating}}
                        <i class="fas fa-star text-yellow-400 mr-1 group-hover:animate-bounce"></i>
                        {{/times}}
                        {{#times (subtract 5 rating)}}
                        <i class="fas fa-star text-gray-300 mr-1"></i>
                        {{/times}}
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
        {{/if}}

        {{!-- Sección de características adicionales --}}
        {{#if data.features}}
        <div class="mt-20 bg-gradient-to-r from-purple-50 to-blue-50 rounded-3xl p-12 animate-fade-in-up animation-delay-600 relative overflow-hidden">
            {{!-- Efectos de fondo --}}
            <div class="absolute inset-0 bg-gradient-to-br from-purple-100/50 to-blue-100/50"></div>
            <div class="relative z-10">
                <h3 class="text-3xl font-bold text-gray-900 mb-8 text-center animate-title">
                    ¿Por qué elegir nuestros servicios?
                </h3>
                
                <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                    {{#each data.features}}
                    <div class="text-center group">
                        <div class="w-16 h-16 bg-gradient-to-br from-purple-500 to-blue-500 rounded-2xl flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform duration-300 shadow-lg">
                            <i class="text-2xl text-white group-hover:animate-bounce">{{icon}}</i>
                        </div>
                        <h4 class="text-xl font-semibold text-gray-900 mb-2 group-hover:text-purple-600 transition-colors duration-300">{{title}}</h4>
                        <p class="text-gray-600 group-hover:text-gray-700 transition-colors duration-300">{{description}}</p>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
        {{/if}}

        {{!-- CTA final --}}
        {{#if data.cta}}
        <div class="mt-20 text-center animate-fade-in-up animation-delay-700">
            <div class="bg-gradient-to-r from-purple-600 to-blue-600 rounded-3xl p-12 text-white relative overflow-hidden">
                {{!-- Efectos de fondo --}}
                <div class="absolute inset-0 bg-gradient-to-br from-purple-700/50 to-blue-700/50"></div>
                <div class="relative z-10">
                    <h3 class="text-3xl font-bold mb-4">{{data.cta.title}}</h3>
                    <p class="text-xl mb-8 opacity-90">{{data.cta.description}}</p>
                    <a href="{{data.cta.button.href}}" 
                       class="group relative inline-flex items-center px-8 py-4 bg-white text-purple-600 rounded-2xl hover:bg-gray-100 transition-all duration-300 transform hover:-translate-y-1 hover:shadow-2xl font-semibold text-lg overflow-hidden">
                        {{!-- Efecto de brillo en hover --}}
                        <span class="absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent transform -skew-x-12 -translate-x-full group-hover:translate-x-full transition-transform duration-700"></span>
                        <span class="relative z-10">{{data.cta.button.text}}</span>
                        <i class="fas fa-arrow-right ml-2 group-hover:translate-x-1 transition-transform duration-300 relative z-10"></i>
                    </a>
                </div>
            </div>
        </div>
        {{/if}}
    </div>
</section>

<style>
@keyframes blob {
    0%, 100% { transform: translate(0, 0) scale(1); }
    25% { transform: translate(-10px, -10px) scale(1.1); }
    50% { transform: translate(10px, -5px) scale(0.9); }
    75% { transform: translate(-5px, 10px) scale(1.05); }
}

@keyframes float {
    0%, 100% { transform: translateY(0px) rotate(0deg); opacity: 0.7; }
    50% { transform: translateY(-10px) rotate(180deg); opacity: 1; }
}

@keyframes titleSlide {
    0% { transform: translateX(-100%); opacity: 0; }
    100% { transform: translateX(0); opacity: 1; }
}

@keyframes fadeInUp {
    0% { transform: translateY(30px); opacity: 0; }
    100% { transform: translateY(0); opacity: 1; }
}

@keyframes fadeInDown {
    0% { transform: translateY(-30px); opacity: 0; }
    100% { transform: translateY(0); opacity: 1; }
}

@keyframes shine {
    0% { transform: translateX(-100%) skewX(-12deg); }
    100% { transform: translateX(200%) skewX(-12deg); }
}

.animate-blob {
    animation: blob 7s infinite;
}

.animate-float {
    animation: float 3s ease-in-out infinite;
}

.animate-title {
    animation: titleSlide 1s ease-out;
}

.animate-fade-in-up {
    animation: fadeInUp 0.8s ease-out;
}

.animate-fade-in-down {
    animation: fadeInDown 0.8s ease-out;
}

.animate-shine {
    animation: shine 2s ease-in-out infinite;
}

.animation-delay-200 { animation-delay: 0.2s; }
.animation-delay-300 { animation-delay: 0.3s; }
.animation-delay-400 { animation-delay: 0.4s; }
.animation-delay-500 { animation-delay: 0.5s; }
.animation-delay-600 { animation-delay: 0.6s; }
.animation-delay-700 { animation-delay: 0.7s; }
.animation-delay-2000 { animation-delay: 2s; }
.animation-delay-4000 { animation-delay: 4s; }

/* Optimizaciones de rendimiento */
@media (prefers-reduced-motion: reduce) {
    .animate-blob, .animate-float, .animate-title, .animate-fade-in-up, .animate-fade-in-down, .animate-shine {
        animation: none;
    }
}

/* Efectos de hover para botones */
.details-btn:hover, .contact-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(139, 92, 246, 0.3);
}

/* Line clamp para descripciones */
.line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Efectos de parallax para elementos de fondo
    window.addEventListener('scroll', function() {
        const scrolled = window.pageYOffset;
        const parallaxElements = document.querySelectorAll('.absolute.inset-0.overflow-hidden > div');
        
        parallaxElements.forEach((element, index) => {
            const speed = 0.3 + (index * 0.1);
            element.style.transform = `translateY(${scrolled * speed}px)`;
        });
    });
    
    // Efectos de hover mejorados para tarjetas de servicios
    const serviceCards = document.querySelectorAll('.service-card');
    serviceCards.forEach(card => {
        card.addEventListener('mouseenter', function() {
            this.style.transform = 'translateY(-8px) scale(1.02)';
        });
        
        card.addEventListener('mouseleave', function() {
            this.style.transform = 'translateY(0) scale(1)';
        });
    });
    
    // Efectos para botones de servicios
    const detailBtns = document.querySelectorAll('.details-btn');
    const contactBtns = document.querySelectorAll('.contact-btn');
    
    detailBtns.forEach(btn => {
        btn.addEventListener('click', function(e) {
            e.preventDefault();
            
            // Efecto de click
            this.style.transform = 'scale(0.95)';
            setTimeout(() => {
                this.style.transform = '';
            }, 150);
            
            // Aquí puedes agregar lógica para mostrar detalles del servicio
            console.log('Ver detalles del servicio');
        });
    });
    
    contactBtns.forEach(btn => {
        btn.addEventListener('click', function(e) {
            e.preventDefault();
            
            // Efecto de click
            this.style.transform = 'scale(0.95)';
            setTimeout(() => {
                this.style.transform = '';
            }, 150);
            
            // Aquí puedes agregar lógica para contactar
            console.log('Contactar servicio');
        });
    });
    
    // Animación de entrada escalonada para servicios
    const observerOptions = {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
    };
    
    const observer = new IntersectionObserver((entries) => {
        entries.forEach((entry, index) => {
            if (entry.isIntersecting) {
                entry.target.style.animationDelay = `${index * 0.1}s`;
                entry.target.style.animation = 'fadeInUp 0.6s ease-out forwards';
                observer.unobserve(entry.target);
            }
        });
    }, observerOptions);
    
    serviceCards.forEach(card => {
        observer.observe(card);
    });
    
    // Efectos para testimonios
    const testimonialCards = document.querySelectorAll('.testimonial-card');
    testimonialCards.forEach(card => {
        card.addEventListener('mouseenter', function() {
            this.style.transform = 'translateY(-4px) scale(1.02)';
        });
        
        card.addEventListener('mouseleave', function() {
            this.style.transform = 'translateY(0) scale(1)';
        });
    });
});
</script>
