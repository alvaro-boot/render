<section id="cart" class="py-24 {{#if (eq style 'minimalista')}}bg-gray-50{{else}}bg-white{{/if}}">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-20">
            <h2 class="text-5xl font-bold text-gray-900 mb-6">{{data.title}}</h2>
            <p class="text-xl text-gray-700 max-w-3xl mx-auto">
                {{data.subtitle}}
            </p>
        </div>

        <div class="grid lg:grid-cols-3 gap-12">
            <!-- Carrito de Compras -->
            <div class="lg:col-span-2">
                <div class="{{#if (eq style 'moderno')}}glass-card{{else}}bg-white{{/if}} rounded-3xl shadow-lg p-8">
                    <h3 class="text-2xl font-bold text-gray-900 mb-6">Tu Carrito</h3>
                    
                    {{#if data.items}}
                    <div class="space-y-6">
                        {{#each data.items}}
                        <div class="flex items-center space-x-4 p-4 border border-gray-200 rounded-2xl">
                            <img src="{{image}}" alt="{{name}}" class="w-20 h-20 object-cover rounded-xl">
                            <div class="flex-1">
                                <h4 class="font-semibold text-gray-900">{{name}}</h4>
                                <p class="text-gray-600 text-sm">{{description}}</p>
                                <div class="flex items-center space-x-4 mt-2">
                                    <div class="flex items-center space-x-2">
                                        <button class="w-8 h-8 rounded-full bg-gray-100 flex items-center justify-center hover:bg-gray-200 transition-colors">-</button>
                                        <span class="w-8 text-center">{{quantity}}</span>
                                        <button class="w-8 h-8 rounded-full bg-gray-100 flex items-center justify-center hover:bg-gray-200 transition-colors">+</button>
                                    </div>
                                    <span class="text-lg font-bold {{#if (eq style 'moderno')}}modern-text-gradient{{else if (eq style 'colorido')}}colorful-text{{else}}elegant-text{{/if}}">${{price}}</span>
                                </div>
                            </div>
                            <button class="text-red-500 hover:text-red-700 transition-colors">
                                <i class="text-xl">üóëÔ∏è</i>
                            </button>
                        </div>
                        {{/each}}
                    </div>
                    {{else}}
                    <div class="text-center py-12">
                        <i class="text-6xl mb-4">üõí</i>
                        <p class="text-gray-600 text-lg">Tu carrito est√° vac√≠o</p>
                        <a href="#products" class="btn btn-primary mt-4">Ver Productos</a>
                    </div>
                    {{/if}}
                </div>
            </div>

            <!-- Resumen del Pedido -->
            <div class="lg:col-span-1">
                <div class="bg-gradient-to-br from-pink-50 to-green-50 rounded-3xl p-8 sticky top-8">
                    <h3 class="text-2xl font-bold text-gray-900 mb-6">Resumen del Pedido</h3>
                    
                    <div class="space-y-4 mb-6">
                        <div class="flex justify-between">
                            <span class="text-gray-600">Subtotal</span>
                            <span class="font-semibold">${{data.subtotal}}</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gray-600">Env√≠o</span>
                            <span class="font-semibold">${{data.shipping}}</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gray-600">Impuestos</span>
                            <span class="font-semibold">${{data.taxes}}</span>
                        </div>
                        <div class="border-t pt-4">
                            <div class="flex justify-between">
                                <span class="text-xl font-bold">Total</span>
                                <span class="text-2xl font-bold elegant-text">${{data.total}}</span>
                            </div>
                        </div>
                    </div>

                    <button class="w-full btn btn-primary btn-lg mb-4">
                        Proceder al Pago
                    </button>
                    
                    <div class="text-center">
                        <p class="text-sm text-gray-600">Pago seguro con</p>
                        <div class="flex justify-center space-x-2 mt-2">
                            <i class="text-2xl">üí≥</i>
                            <i class="text-2xl">üîí</i>
                            <i class="text-2xl">üõ°Ô∏è</i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
