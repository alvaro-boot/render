{{!-- Sección de Galería --}}
<section id="gallery" class="py-16 {{#if (eq style 'colorido')}}bg-white{{else}}bg-gray-50{{/if}}">
    <div class="container mx-auto px-4">
        {{#if isMultiPage}}
        <div class="mb-6">
            <a href="/api/v1/client-templates/{{../clientId}}/pages" class="btn btn-outline">← Índice</a>
        </div>
        {{/if}}
        <div class="text-center mb-12 section-header">
            <h2 class="section-title">{{data.title}}</h2>
            <p class="section-subtitle max-w-2xl mx-auto">{{data.subtitle}}</p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 {{#if (eq style 'moderno')}}lg:grid-cols-4{{else}}lg:grid-cols-3{{/if}} xl:grid-cols-4 gap-4">
            {{#each data.images}}
            <div class="group relative overflow-hidden rounded-lg {{#if (eq style 'moderno')}}glass-card{{else if (eq style 'minimalista')}}minimal-card{{else}}shadow-lg{{/if}}">
                <img class="w-full h-64 object-cover transition-transform duration-300 group-hover:scale-110" 
                     src="{{src}}" 
                     alt="{{alt}}">
                <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-50 transition-all duration-300 flex items-center justify-center">
                    <div class="text-white opacity-0 group-hover:opacity-100 transition-opacity duration-300 text-center">
                        <h3 class="text-lg font-semibold mb-2">{{title}}</h3>
                        <p class="text-sm">{{description}}</p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        
        {{#if data.categories}}
        <div class="mt-8 text-center">
            <div class="flex flex-wrap justify-center gap-4">
                {{#each data.categories}}
                <button class="px-6 py-2 rounded-full bg-white border border-gray-300 text-gray-700 hover:bg-gray-100 transition-colors duration-200">
                    {{name}}
                </button>
                {{/each}}
            </div>
        </div>
        {{/if}}
    </div>
</section>
