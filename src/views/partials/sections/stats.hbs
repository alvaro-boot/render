<section id="stats" class="py-20 relative overflow-hidden">
    {{!-- Efectos de fondo animados --}}
    <div class="absolute inset-0 overflow-hidden">
        <div class="absolute top-20 left-20 w-72 h-72 bg-purple-300 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-blob"></div>
        <div class="absolute bottom-20 right-20 w-96 h-96 bg-blue-300 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-blob animation-delay-2000"></div>
        <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-80 h-80 bg-indigo-300 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-blob animation-delay-4000"></div>
    </div>

    <div class="max-w-7xl mx-auto px-6 relative z-10">
        {{#if isMultiPage}}
        <div class="mb-8 animate-fade-in-down">
            <a href="/api/v1/client-templates/{{../clientId}}/pages" 
               class="inline-flex items-center px-6 py-3 bg-white/10 backdrop-blur-sm text-gray-700 rounded-xl hover:bg-white/20 transition-all duration-300 border border-gray-200 hover:border-gray-300 hover:scale-105 shadow-lg">
                <i class="fas fa-arrow-left mr-2"></i>
                Volver al índice
            </a>
        </div>
        {{/if}}

        {{!-- Header de la sección mejorado --}}
        <div class="text-center mb-16 animate-fade-in-up">
            <h2 class="text-5xl lg:text-6xl font-bold text-gray-900 mb-6 animate-title">
                <span class="bg-gradient-to-r from-purple-600 via-blue-600 to-indigo-600 bg-clip-text text-transparent">
                    {{data.title}}
                </span>
            </h2>
            {{#if data.subtitle}}
            <p class="text-xl text-gray-600 max-w-3xl mx-auto animate-fade-in-up animation-delay-200">
                {{data.subtitle}}
            </p>
            {{/if}}
        </div>

        {{!-- Grid de estadísticas principales mejorado --}}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 animate-fade-in-up animation-delay-300">
            {{#each data.stats}}
            <div class="stat-card group bg-white/90 backdrop-blur-sm rounded-3xl shadow-xl hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-4 overflow-hidden border border-white/20">
                {{!-- Icono y número --}}
                <div class="p-8 text-center">
                    <div class="w-20 h-20 bg-gradient-to-br from-purple-500 to-blue-500 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300 shadow-lg">
                        <i class="text-3xl text-white group-hover:animate-bounce">{{icon}}</i>
                    </div>
                    
                    <div class="text-5xl font-bold text-purple-600 mb-2 counter" data-target="{{number}}" data-suffix="{{suffix}}">0</div>
                    <h3 class="text-xl font-semibold text-gray-900 mb-2 group-hover:text-purple-600 transition-colors duration-300">{{title}}</h3>
                    {{#if description}}
                    <p class="text-gray-600 group-hover:text-gray-700 transition-colors duration-300">{{description}}</p>
                    {{/if}}
                </div>

                {{!-- Indicador de progreso --}}
                {{#if progress}}
                <div class="px-8 pb-8">
                    <div class="flex items-center justify-between text-sm text-gray-600 mb-2">
                        <span>Progreso</span>
                        <span>{{progress}}%</span>
                    </div>
                    <div class="w-full bg-gray-200 rounded-full h-2 overflow-hidden">
                        <div class="bg-gradient-to-r from-purple-500 to-blue-500 h-2 rounded-full transition-all duration-1000 ease-out" 
                             style="width: 0%" 
                             data-progress="{{progress}}"></div>
                    </div>
                </div>
                {{/if}}

                {{!-- Indicador de hover --}}
                <div class="h-1 bg-gradient-to-r from-purple-500 via-blue-500 to-indigo-500 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-500"></div>
            </div>
            {{/each}}
        </div>

        {{!-- Sección de gráficos mejorada --}}
        {{#if data.charts}}
        <div class="mt-20 bg-gradient-to-r from-purple-50 to-blue-50 rounded-3xl p-12 animate-fade-in-up animation-delay-400 relative overflow-hidden">
            {{!-- Efectos de fondo --}}
            <div class="absolute inset-0 bg-gradient-to-br from-purple-100/50 to-blue-100/50"></div>
            <div class="relative z-10">
                <h3 class="text-3xl font-bold text-gray-900 mb-8 text-center animate-title">
                    Análisis Detallado
                </h3>
                
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
                    {{#each data.charts}}
                    <div class="chart-container group bg-white/90 backdrop-blur-sm rounded-2xl p-6 shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 border border-white/20">
                        <h4 class="text-xl font-semibold text-gray-900 mb-4 group-hover:text-purple-600 transition-colors duration-300">{{title}}</h4>
                        
                        {{#if type "===" "bar"}}
                        <div class="chart-bar space-y-3">
                            {{#each data}}
                            <div class="flex items-center">
                                <span class="w-20 text-sm text-gray-600">{{label}}</span>
                                <div class="flex-1 mx-4">
                                    <div class="w-full bg-gray-200 rounded-full h-3 overflow-hidden">
                                        <div class="bg-gradient-to-r from-purple-500 to-blue-500 h-3 rounded-full transition-all duration-1000 ease-out" 
                                             style="width: 0%" 
                                             data-width="{{percentage}}"></div>
                                    </div>
                                </div>
                                <span class="w-12 text-sm font-semibold text-purple-600">{{value}}</span>
                            </div>
                            {{/each}}
                        </div>
                        {{/if}}
                        
                        {{#if type "===" "pie"}}
                        <div class="chart-pie relative w-48 h-48 mx-auto">
                            <svg class="w-full h-full transform -rotate-90">
                                {{#each data}}
                                <circle cx="96" cy="96" r="80" 
                                        fill="none" 
                                        stroke="{{color}}" 
                                        stroke-width="16" 
                                        stroke-dasharray="0 502.4" 
                                        stroke-dashoffset="0"
                                        data-percentage="{{percentage}}"
                                        class="transition-all duration-1000 ease-out"></circle>
                                {{/each}}
                            </svg>
                            <div class="absolute inset-0 flex items-center justify-center">
                                <div class="text-center">
                                    <div class="text-2xl font-bold text-purple-600">{{total}}</div>
                                    <div class="text-sm text-gray-600">Total</div>
                                </div>
                            </div>
                        </div>
                        {{/if}}
                        
                        {{#if type "===" "line"}}
                        <div class="chart-line h-64">
                            <canvas id="chart-{{@index}}" class="w-full h-full"></canvas>
                        </div>
                        {{/if}}
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
        {{/if}}

        {{!-- Sección de comparativas --}}
        {{#if data.comparisons}}
        <div class="mt-20 animate-fade-in-up animation-delay-500">
            <h3 class="text-3xl font-bold text-gray-900 mb-8 text-center animate-title">
                Comparativas y Tendencias
            </h3>
            
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {{#each data.comparisons}}
                <div class="comparison-card group bg-white/90 backdrop-blur-sm rounded-2xl p-6 shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 border border-white/20">
                    <div class="flex items-center justify-between mb-4">
                        <h4 class="text-lg font-semibold text-gray-900 group-hover:text-purple-600 transition-colors duration-300">{{title}}</h4>
                        <div class="w-12 h-12 bg-gradient-to-br from-purple-500 to-blue-500 rounded-xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                            <i class="text-white group-hover:animate-bounce">{{icon}}</i>
                        </div>
                    </div>
                    
                    <div class="space-y-3">
                        {{#each items}}
                        <div class="flex items-center justify-between">
                            <span class="text-gray-600">{{label}}</span>
                            <div class="flex items-center space-x-2">
                                <span class="text-lg font-semibold text-purple-600">{{value}}</span>
                                {{#if change}}
                                <span class="text-sm {{#if change.startsWith '+'}}text-green-500{{else}}text-red-500{{/if}}">
                                    {{change}}
                                </span>
                                {{/if}}
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
        {{/if}}

        {{!-- Sección de logros --}}
        {{#if data.achievements}}
        <div class="mt-20 bg-gradient-to-r from-purple-600 to-blue-600 rounded-3xl p-12 animate-fade-in-up animation-delay-600 relative overflow-hidden">
            {{!-- Efectos de fondo --}}
            <div class="absolute inset-0 bg-gradient-to-br from-purple-700/50 to-blue-700/50"></div>
            <div class="relative z-10 text-white">
                <h3 class="text-3xl font-bold mb-8 text-center">
                    Logros Destacados
                </h3>
                
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                    {{#each data.achievements}}
                    <div class="achievement-card group text-center">
                        <div class="w-16 h-16 bg-white/20 backdrop-blur-sm rounded-2xl flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform duration-300">
                            <i class="text-2xl text-white group-hover:animate-bounce">{{icon}}</i>
                        </div>
                        <h4 class="text-xl font-semibold mb-2 group-hover:text-purple-200 transition-colors duration-300">{{title}}</h4>
                        <p class="text-purple-100 group-hover:text-white transition-colors duration-300">{{description}}</p>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
        {{/if}}

        {{!-- CTA para más información --}}
        {{#if data.cta}}
        <div class="mt-20 text-center animate-fade-in-up animation-delay-700">
            <div class="bg-gradient-to-r from-gray-50 to-purple-50 rounded-3xl p-12 relative overflow-hidden border border-purple-100">
                {{!-- Efectos de fondo --}}
                <div class="absolute inset-0 bg-gradient-to-br from-purple-100/30 to-blue-100/30"></div>
                <div class="relative z-10">
                    <h3 class="text-3xl font-bold text-gray-900 mb-4">{{data.cta.title}}</h3>
                    <p class="text-xl text-gray-600 mb-8">{{data.cta.description}}</p>
                    <a href="{{data.cta.button.href}}" 
                       class="group relative inline-flex items-center px-8 py-4 bg-gradient-to-r from-purple-600 to-blue-600 text-white rounded-2xl hover:from-purple-700 hover:to-blue-700 transition-all duration-300 transform hover:-translate-y-1 hover:shadow-2xl font-semibold text-lg overflow-hidden">
                        {{!-- Efecto de brillo en hover --}}
                        <span class="absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent transform -skew-x-12 -translate-x-full group-hover:translate-x-full transition-transform duration-700"></span>
                        <span class="relative z-10">{{data.cta.button.text}}</span>
                        <i class="fas fa-arrow-right ml-2 group-hover:translate-x-1 transition-transform duration-300 relative z-10"></i>
                    </a>
                </div>
            </div>
        </div>
        {{/if}}
    </div>
</section>

<style>
@keyframes blob {
    0%, 100% { transform: translate(0, 0) scale(1); }
    25% { transform: translate(-10px, -10px) scale(1.1); }
    50% { transform: translate(10px, -5px) scale(0.9); }
    75% { transform: translate(-5px, 10px) scale(1.05); }
}

@keyframes float {
    0%, 100% { transform: translateY(0px) rotate(0deg); opacity: 0.7; }
    50% { transform: translateY(-10px) rotate(180deg); opacity: 1; }
}

@keyframes titleSlide {
    0% { transform: translateX(-100%); opacity: 0; }
    100% { transform: translateX(0); opacity: 1; }
}

@keyframes fadeInUp {
    0% { transform: translateY(30px); opacity: 0; }
    100% { transform: translateY(0); opacity: 1; }
}

@keyframes fadeInDown {
    0% { transform: translateY(-30px); opacity: 0; }
    100% { transform: translateY(0); opacity: 1; }
}

@keyframes shine {
    0% { transform: translateX(-100%) skewX(-12deg); }
    100% { transform: translateX(200%) skewX(-12deg); }
}

.animate-blob {
    animation: blob 7s infinite;
}

.animate-float {
    animation: float 3s ease-in-out infinite;
}

.animate-title {
    animation: titleSlide 1s ease-out;
}

.animate-fade-in-up {
    animation: fadeInUp 0.8s ease-out;
}

.animate-fade-in-down {
    animation: fadeInDown 0.8s ease-out;
}

.animate-shine {
    animation: shine 2s ease-in-out infinite;
}

.animation-delay-200 { animation-delay: 0.2s; }
.animation-delay-300 { animation-delay: 0.3s; }
.animation-delay-400 { animation-delay: 0.4s; }
.animation-delay-500 { animation-delay: 0.5s; }
.animation-delay-600 { animation-delay: 0.6s; }
.animation-delay-700 { animation-delay: 0.7s; }
.animation-delay-2000 { animation-delay: 2s; }
.animation-delay-4000 { animation-delay: 4s; }

/* Optimizaciones de rendimiento */
@media (prefers-reduced-motion: reduce) {
    .animate-blob, .animate-float, .animate-title, .animate-fade-in-up, .animate-fade-in-down, .animate-shine {
        animation: none;
    }
}

/* Efectos de hover para tarjetas de estadísticas */
.stat-card:hover {
    transform: translateY(-8px) scale(1.02);
    box-shadow: 0 20px 40px rgba(139, 92, 246, 0.2);
}

/* Efectos para gráficos */
.chart-container:hover {
    transform: translateY(-4px) scale(1.01);
    box-shadow: 0 15px 30px rgba(139, 92, 246, 0.15);
}

/* Efectos para comparativas */
.comparison-card:hover {
    transform: translateY(-4px) scale(1.01);
    box-shadow: 0 15px 30px rgba(139, 92, 246, 0.15);
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Efectos de parallax para elementos de fondo
    window.addEventListener('scroll', function() {
        const scrolled = window.pageYOffset;
        const parallaxElements = document.querySelectorAll('.absolute.inset-0.overflow-hidden > div');
        
        parallaxElements.forEach((element, index) => {
            const speed = 0.3 + (index * 0.1);
            element.style.transform = `translateY(${scrolled * speed}px)`;
        });
    });
    
    // Animación de contadores con sufijos
    const counters = document.querySelectorAll('.counter');
    counters.forEach(counter => {
        const target = parseInt(counter.getAttribute('data-target'));
        const suffix = counter.getAttribute('data-suffix') || '';
        const increment = target / 100;
        let current = 0;
        
        const updateCounter = () => {
            if (current < target) {
                current += increment;
                counter.textContent = Math.ceil(current) + suffix;
                setTimeout(updateCounter, 20);
            } else {
                counter.textContent = target + suffix;
            }
        };
        
        // Iniciar animación cuando el elemento sea visible
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    updateCounter();
                    observer.unobserve(entry.target);
                }
            });
        });
        
        observer.observe(counter);
    });
    
    // Animación de barras de progreso
    const progressBars = document.querySelectorAll('[data-progress]');
    progressBars.forEach(bar => {
        const progress = bar.getAttribute('data-progress');
        
        const progressObserver = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    setTimeout(() => {
                        bar.style.width = progress + '%';
                    }, 500);
                    progressObserver.unobserve(entry.target);
                }
            });
        });
        
        progressObserver.observe(bar);
    });
    
    // Animación de gráficos de barras
    const barCharts = document.querySelectorAll('[data-width]');
    barCharts.forEach(bar => {
        const width = bar.getAttribute('data-width');
        
        const barObserver = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    setTimeout(() => {
                        bar.style.width = width + '%';
                    }, 800);
                    barObserver.unobserve(entry.target);
                }
            });
        });
        
        barObserver.observe(bar);
    });
    
    // Animación de gráficos circulares
    const pieCharts = document.querySelectorAll('[data-percentage]');
    pieCharts.forEach(circle => {
        const percentage = circle.getAttribute('data-percentage');
        const circumference = 2 * Math.PI * 80; // r = 80
        const offset = circumference - (percentage / 100) * circumference;
        
        const pieObserver = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    setTimeout(() => {
                        circle.style.strokeDasharray = circumference + ' ' + circumference;
                        circle.style.strokeDashoffset = offset;
                    }, 1000);
                    pieObserver.unobserve(entry.target);
                }
            });
        });
        
        pieObserver.observe(circle);
    });
    
    // Efectos de hover mejorados para tarjetas
    const statCards = document.querySelectorAll('.stat-card');
    statCards.forEach(card => {
        card.addEventListener('mouseenter', function() {
            this.style.transform = 'translateY(-8px) scale(1.02)';
        });
        
        card.addEventListener('mouseleave', function() {
            this.style.transform = 'translateY(0) scale(1)';
        });
    });
    
    // Efectos para contenedores de gráficos
    const chartContainers = document.querySelectorAll('.chart-container');
    chartContainers.forEach(container => {
        container.addEventListener('mouseenter', function() {
            this.style.transform = 'translateY(-4px) scale(1.01)';
        });
        
        container.addEventListener('mouseleave', function() {
            this.style.transform = 'translateY(0) scale(1)';
        });
    });
    
    // Efectos para tarjetas de comparación
    const comparisonCards = document.querySelectorAll('.comparison-card');
    comparisonCards.forEach(card => {
        card.addEventListener('mouseenter', function() {
            this.style.transform = 'translateY(-4px) scale(1.01)';
        });
        
        card.addEventListener('mouseleave', function() {
            this.style.transform = 'translateY(0) scale(1)';
        });
    });
    
    // Animación de entrada escalonada
    const observerOptions = {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
    };
    
    const observer = new IntersectionObserver((entries) => {
        entries.forEach((entry, index) => {
            if (entry.isIntersecting) {
                entry.target.style.animationDelay = `${index * 0.1}s`;
                entry.target.style.animation = 'fadeInUp 0.6s ease-out forwards';
                observer.unobserve(entry.target);
            }
        });
    }, observerOptions);
    
    const allCards = document.querySelectorAll('.stat-card, .chart-container, .comparison-card, .achievement-card');
    allCards.forEach(card => {
        observer.observe(card);
    });
});
</script>
