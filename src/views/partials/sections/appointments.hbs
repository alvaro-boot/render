<section id="appointments" class="py-20 relative overflow-hidden">
    {{!-- Efectos de fondo animados --}}
    <div class="absolute inset-0 overflow-hidden">
        <div class="absolute top-20 left-20 w-72 h-72 bg-purple-300 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-blob"></div>
        <div class="absolute bottom-20 right-20 w-96 h-96 bg-blue-300 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-blob animation-delay-2000"></div>
        <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-80 h-80 bg-indigo-300 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-blob animation-delay-4000"></div>
    </div>

    <div class="max-w-7xl mx-auto px-6 relative z-10">
        {{#if isMultiPage}}
        <div class="mb-8 animate-fade-in-down">
            <a href="/api/v1/client-templates/{{../clientId}}/pages" 
               class="inline-flex items-center px-6 py-3 bg-white/10 backdrop-blur-sm text-gray-700 rounded-xl hover:bg-white/20 transition-all duration-300 border border-gray-200 hover:border-gray-300 hover:scale-105 shadow-lg">
                <i class="fas fa-arrow-left mr-2"></i>
                Volver al índice
            </a>
        </div>
        {{/if}}

        {{!-- Header de la sección mejorado --}}
        <div class="text-center mb-16 animate-fade-in-up">
            <h2 class="text-5xl lg:text-6xl font-bold text-gray-900 mb-6 animate-title">
                <span class="bg-gradient-to-r from-purple-600 via-blue-600 to-indigo-600 bg-clip-text text-transparent">
                    {{data.title}}
                </span>
            </h2>
            {{#if data.subtitle}}
            <p class="text-xl text-gray-600 max-w-3xl mx-auto animate-fade-in-up animation-delay-200">
                {{data.subtitle}}
            </p>
            {{/if}}
        </div>

        {{!-- Formulario de cita mejorado --}}
        <div class="grid lg:grid-cols-2 gap-16 animate-fade-in-up animation-delay-300">
            {{!-- Información de servicios --}}
            <div class="space-y-8">
                <div class="bg-white/90 backdrop-blur-sm rounded-3xl p-8 shadow-2xl border border-white/20">
                    <h3 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
                        <i class="fas fa-calendar-check mr-3 text-purple-600 animate-bounce"></i>
                        Servicios Disponibles
                    </h3>
                    
                    <div class="space-y-4">
                        {{#each data.services}}
                        <div class="service-option group flex items-center p-4 rounded-2xl hover:bg-purple-50 transition-all duration-300 cursor-pointer border border-gray-100 hover:border-purple-200">
                            <input type="radio" name="service" value="{{id}}" id="service-{{id}}" class="w-5 h-5 text-purple-600 border-gray-300 focus:ring-purple-500 group-hover:border-purple-400 transition-colors duration-300">
                            <label for="service-{{id}}" class="ml-4 flex-1 cursor-pointer">
                                <div class="flex items-center justify-between">
                                    <div>
                                        <h4 class="font-semibold text-gray-900 group-hover:text-purple-600 transition-colors duration-300">{{name}}</h4>
                                        <p class="text-sm text-gray-600 group-hover:text-gray-700 transition-colors duration-300">{{description}}</p>
                                    </div>
                                    <div class="text-right">
                                        <div class="text-lg font-bold text-purple-600">{{price}}</div>
                                        <div class="text-xs text-gray-500">{{duration}}</div>
                                    </div>
                                </div>
                            </label>
                        </div>
                        {{/each}}
                    </div>
                </div>

                {{!-- Horarios disponibles --}}
                <div class="bg-white/90 backdrop-blur-sm rounded-3xl p-8 shadow-2xl border border-white/20">
                    <h3 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
                        <i class="fas fa-clock mr-3 text-purple-600 animate-pulse"></i>
                        Horarios Disponibles
                    </h3>
                    
                    <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
                        {{#each data.timeSlots}}
                        <button class="time-slot group p-4 rounded-xl border border-gray-200 hover:border-purple-300 hover:bg-purple-50 transition-all duration-300 text-center">
                            <div class="text-lg font-semibold text-gray-900 group-hover:text-purple-600 transition-colors duration-300">{{time}}</div>
                            <div class="text-sm text-gray-600 group-hover:text-gray-700 transition-colors duration-300">{{status}}</div>
                        </button>
                        {{/each}}
                    </div>
                </div>

                {{!-- Información adicional --}}
                <div class="bg-gradient-to-r from-purple-50 to-blue-50 rounded-3xl p-8 relative overflow-hidden">
                    {{!-- Efectos de fondo --}}
                    <div class="absolute inset-0 bg-gradient-to-br from-purple-100/50 to-blue-100/50"></div>
                    <div class="relative z-10">
                        <h3 class="text-xl font-bold text-gray-900 mb-4 flex items-center">
                            <i class="fas fa-info-circle mr-3 text-purple-600 animate-float"></i>
                            Información Importante
                        </h3>
                        
                        <ul class="space-y-3">
                            {{#each data.info}}
                            <li class="flex items-start space-x-3">
                                <div class="w-6 h-6 bg-gradient-to-br from-purple-500 to-blue-500 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                                    <i class="fas fa-check text-white text-xs"></i>
                                </div>
                                <span class="text-gray-700">{{this}}</span>
                            </li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>

            {{!-- Formulario de reserva mejorado --}}
            <div class="animate-fade-in-up animation-delay-400">
                <div class="bg-white/90 backdrop-blur-sm rounded-3xl shadow-2xl p-8 border border-white/20">
                    <h3 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
                        <i class="fas fa-calendar-plus mr-3 text-purple-600 animate-float"></i>
                        Reservar Cita
                    </h3>
                    
                    <form class="space-y-6">
                        {{!-- Fecha --}}
                        <div class="group">
                            <label class="block text-sm font-semibold text-gray-700 mb-2 group-hover:text-purple-600 transition-colors duration-300">
                                Fecha de la Cita
                            </label>
                            <input type="date" 
                                   class="w-full px-4 py-4 border border-gray-200 rounded-xl focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all duration-300 bg-gray-50 focus:bg-white group-hover:border-purple-300" 
                                   min="{{data.minDate}}" 
                                   max="{{data.maxDate}}">
                        </div>

                        {{!-- Hora --}}
                        <div class="group">
                            <label class="block text-sm font-semibold text-gray-700 mb-2 group-hover:text-purple-600 transition-colors duration-300">
                                Hora Preferida
                            </label>
                            <select class="w-full px-4 py-4 border border-gray-200 rounded-xl focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all duration-300 bg-gray-50 focus:bg-white group-hover:border-purple-300">
                                <option value="">Selecciona una hora</option>
                                {{#each data.availableHours}}
                                <option value="{{time}}">{{time}} - {{status}}</option>
                                {{/each}}
                            </select>
                        </div>

                        {{!-- Información personal --}}
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div class="group">
                                <label class="block text-sm font-semibold text-gray-700 mb-2 group-hover:text-purple-600 transition-colors duration-300">
                                    Nombre Completo
                                </label>
                                <input type="text" 
                                       class="w-full px-4 py-4 border border-gray-200 rounded-xl focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all duration-300 bg-gray-50 focus:bg-white group-hover:border-purple-300" 
                                       placeholder="Tu nombre completo">
                            </div>
                            
                            <div class="group">
                                <label class="block text-sm font-semibold text-gray-700 mb-2 group-hover:text-purple-600 transition-colors duration-300">
                                    Teléfono
                                </label>
                                <input type="tel" 
                                       class="w-full px-4 py-4 border border-gray-200 rounded-xl focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all duration-300 bg-gray-50 focus:bg-white group-hover:border-purple-300" 
                                       placeholder="Tu número de teléfono">
                            </div>
                        </div>

                        <div class="group">
                            <label class="block text-sm font-semibold text-gray-700 mb-2 group-hover:text-purple-600 transition-colors duration-300">
                                Email
                            </label>
                            <input type="email" 
                                   class="w-full px-4 py-4 border border-gray-200 rounded-xl focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all duration-300 bg-gray-50 focus:bg-white group-hover:border-purple-300" 
                                   placeholder="tu@email.com">
                        </div>

                        {{!-- Notas adicionales --}}
                        <div class="group">
                            <label class="block text-sm font-semibold text-gray-700 mb-2 group-hover:text-purple-600 transition-colors duration-300">
                                Notas Adicionales
                            </label>
                            <textarea rows="4" 
                                      class="w-full px-4 py-4 border border-gray-200 rounded-xl focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all duration-300 bg-gray-50 focus:bg-white group-hover:border-purple-300 resize-none" 
                                      placeholder="Información adicional o comentarios..."></textarea>
                        </div>

                        {{!-- Confirmación --}}
                        <div class="flex items-center space-x-3 group">
                            <input type="checkbox" 
                                   id="confirm" 
                                   class="w-5 h-5 text-purple-600 border-gray-300 rounded focus:ring-purple-500 group-hover:border-purple-400 transition-colors duration-300">
                            <label for="confirm" class="text-sm text-gray-600 group-hover:text-gray-700 transition-colors duration-300">
                                Confirmo que he leído y acepto los <a href="#" class="text-purple-600 hover:text-purple-700 underline">términos y condiciones</a>
                            </label>
                        </div>

                        {{!-- Botón de reserva --}}
                        <button type="submit" 
                                class="group relative w-full bg-gradient-to-r from-purple-600 to-blue-600 text-white py-4 px-8 rounded-xl font-semibold hover:from-purple-700 hover:to-blue-700 transition-all duration-300 transform hover:-translate-y-1 hover:shadow-2xl overflow-hidden">
                            {{!-- Efecto de brillo en hover --}}
                            <span class="absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent transform -skew-x-12 -translate-x-full group-hover:translate-x-full transition-transform duration-700"></span>
                            <span class="relative z-10 flex items-center justify-center">
                                <i class="fas fa-calendar-check mr-2 group-hover:animate-bounce"></i>
                                Reservar Cita
                            </span>
                        </button>
                    </form>
                </div>

                {{!-- Información de contacto rápida --}}
                <div class="mt-8 bg-gradient-to-r from-green-50 to-emerald-50 rounded-2xl p-6 border border-green-100">
                    <div class="flex items-center space-x-4">
                        <div class="w-12 h-12 bg-gradient-to-br from-green-500 to-emerald-500 rounded-xl flex items-center justify-center text-white">
                            <i class="fas fa-phone text-lg animate-pulse"></i>
                        </div>
                        <div>
                            <h4 class="font-semibold text-gray-900">¿Necesitas ayuda?</h4>
                            <p class="text-gray-600 text-sm">Llámanos al {{data.phone}} o envía un WhatsApp</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {{!-- Sección de testimonios de citas --}}
        {{#if data.testimonials}}
        <div class="mt-20 animate-fade-in-up animation-delay-500">
            <h3 class="text-3xl font-bold text-gray-900 mb-8 text-center animate-title">
                Lo que dicen nuestros clientes
            </h3>
            
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {{#each data.testimonials}}
                <div class="testimonial-card group bg-white/90 backdrop-blur-sm rounded-3xl p-6 shadow-xl hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2 border border-white/20">
                    <div class="flex items-center mb-4">
                        {{#if avatar}}
                        <img src="{{avatar}}" alt="{{name}}" class="w-12 h-12 rounded-full mr-4 group-hover:scale-110 transition-transform duration-300">
                        {{else}}
                        <div class="w-12 h-12 bg-gradient-to-br from-purple-500 to-blue-500 rounded-full flex items-center justify-center mr-4 group-hover:scale-110 transition-transform duration-300">
                            <i class="fas fa-user text-white"></i>
                        </div>
                        {{/if}}
                        <div>
                            <h4 class="font-semibold text-gray-900 group-hover:text-purple-600 transition-colors duration-300">{{name}}</h4>
                            <p class="text-sm text-gray-600">{{service}}</p>
                        </div>
                    </div>
                    
                    <p class="text-gray-700 mb-4 italic">"{{content}}"</p>
                    
                    <div class="flex items-center">
                        {{#times rating}}
                        <i class="fas fa-star text-yellow-400 mr-1 group-hover:animate-bounce"></i>
                        {{/times}}
                        <span class="ml-2 text-sm text-gray-500">({{rating}}/5)</span>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
        {{/if}}

        {{!-- CTA final --}}
        {{#if data.cta}}
        <div class="mt-20 text-center animate-fade-in-up animation-delay-600">
            <div class="bg-gradient-to-r from-purple-600 to-blue-600 rounded-3xl p-12 text-white relative overflow-hidden">
                {{!-- Efectos de fondo --}}
                <div class="absolute inset-0 bg-gradient-to-br from-purple-700/50 to-blue-700/50"></div>
                <div class="relative z-10">
                    <h3 class="text-3xl font-bold mb-4">{{data.cta.title}}</h3>
                    <p class="text-xl mb-8 opacity-90">{{data.cta.description}}</p>
                    <a href="{{data.cta.button.href}}" 
                       class="group relative inline-flex items-center px-8 py-4 bg-white text-purple-600 rounded-2xl hover:bg-gray-100 transition-all duration-300 transform hover:-translate-y-1 hover:shadow-2xl font-semibold text-lg overflow-hidden">
                        {{!-- Efecto de brillo en hover --}}
                        <span class="absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent transform -skew-x-12 -translate-x-full group-hover:translate-x-full transition-transform duration-700"></span>
                        <span class="relative z-10">{{data.cta.button.text}}</span>
                        <i class="fas fa-arrow-right ml-2 group-hover:translate-x-1 transition-transform duration-300 relative z-10"></i>
                    </a>
                </div>
            </div>
        </div>
        {{/if}}
    </div>
</section>

<style>
@keyframes blob {
    0%, 100% { transform: translate(0, 0) scale(1); }
    25% { transform: translate(-10px, -10px) scale(1.1); }
    50% { transform: translate(10px, -5px) scale(0.9); }
    75% { transform: translate(-5px, 10px) scale(1.05); }
}

@keyframes float {
    0%, 100% { transform: translateY(0px) rotate(0deg); opacity: 0.7; }
    50% { transform: translateY(-10px) rotate(180deg); opacity: 1; }
}

@keyframes titleSlide {
    0% { transform: translateX(-100%); opacity: 0; }
    100% { transform: translateX(0); opacity: 1; }
}

@keyframes fadeInUp {
    0% { transform: translateY(30px); opacity: 0; }
    100% { transform: translateY(0); opacity: 1; }
}

@keyframes fadeInDown {
    0% { transform: translateY(-30px); opacity: 0; }
    100% { transform: translateY(0); opacity: 1; }
}

@keyframes shine {
    0% { transform: translateX(-100%) skewX(-12deg); }
    100% { transform: translateX(200%) skewX(-12deg); }
}

.animate-blob {
    animation: blob 7s infinite;
}

.animate-float {
    animation: float 3s ease-in-out infinite;
}

.animate-title {
    animation: titleSlide 1s ease-out;
}

.animate-fade-in-up {
    animation: fadeInUp 0.8s ease-out;
}

.animate-fade-in-down {
    animation: fadeInDown 0.8s ease-out;
}

.animate-shine {
    animation: shine 2s ease-in-out infinite;
}

.animation-delay-200 { animation-delay: 0.2s; }
.animation-delay-300 { animation-delay: 0.3s; }
.animation-delay-400 { animation-delay: 0.4s; }
.animation-delay-500 { animation-delay: 0.5s; }
.animation-delay-600 { animation-delay: 0.6s; }
.animation-delay-2000 { animation-delay: 2s; }
.animation-delay-4000 { animation-delay: 4s; }

/* Optimizaciones de rendimiento */
@media (prefers-reduced-motion: reduce) {
    .animate-blob, .animate-float, .animate-title, .animate-fade-in-up, .animate-fade-in-down, .animate-shine {
        animation: none;
    }
}

/* Efectos de hover para opciones de servicio */
.service-option:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(139, 92, 246, 0.1);
}

/* Efectos para slots de tiempo */
.time-slot:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(139, 92, 246, 0.15);
}

/* Efectos de focus mejorados */
input:focus, textarea:focus, select:focus {
    transform: scale(1.02);
    box-shadow: 0 0 0 3px rgba(139, 92, 246, 0.1);
}

/* Efectos de hover para botones */
button:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(139, 92, 246, 0.3);
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Efectos de parallax para elementos de fondo
    window.addEventListener('scroll', function() {
        const scrolled = window.pageYOffset;
        const parallaxElements = document.querySelectorAll('.absolute.inset-0.overflow-hidden > div');
        
        parallaxElements.forEach((element, index) => {
            const speed = 0.3 + (index * 0.1);
            element.style.transform = `translateY(${scrolled * speed}px)`;
        });
    });
    
    // Efectos de hover mejorados para opciones de servicio
    const serviceOptions = document.querySelectorAll('.service-option');
    serviceOptions.forEach(option => {
        option.addEventListener('mouseenter', function() {
            this.style.transform = 'translateY(-2px)';
        });
        
        option.addEventListener('mouseleave', function() {
            this.style.transform = 'translateY(0)';
        });
    });
    
    // Efectos para slots de tiempo
    const timeSlots = document.querySelectorAll('.time-slot');
    timeSlots.forEach(slot => {
        slot.addEventListener('mouseenter', function() {
            this.style.transform = 'translateY(-2px)';
        });
        
        slot.addEventListener('mouseleave', function() {
            this.style.transform = 'translateY(0)';
        });
    });
    
    // Validación de formulario con efectos visuales
    const form = document.querySelector('form');
    const inputs = form.querySelectorAll('input, textarea, select');
    
    inputs.forEach(input => {
        input.addEventListener('focus', function() {
            this.parentElement.classList.add('ring-2', 'ring-purple-500');
        });
        
        input.addEventListener('blur', function() {
            this.parentElement.classList.remove('ring-2', 'ring-purple-500');
        });
        
        input.addEventListener('input', function() {
            if (this.value.length > 0) {
                this.classList.add('border-green-500');
                this.classList.remove('border-gray-200');
            } else {
                this.classList.remove('border-green-500');
                this.classList.add('border-gray-200');
            }
        });
    });
    
    // Efecto de envío del formulario
    form.addEventListener('submit', function(e) {
        e.preventDefault();
        
        const submitButton = this.querySelector('button[type="submit"]');
        const originalText = submitButton.innerHTML;
        
        // Efecto de carga
        submitButton.innerHTML = `
            <span class="relative z-10 flex items-center justify-center">
                <i class="fas fa-spinner fa-spin mr-2"></i>
                Procesando...
            </span>
        `;
        submitButton.disabled = true;
        
        // Simular procesamiento
        setTimeout(() => {
            submitButton.innerHTML = `
                <span class="relative z-10 flex items-center justify-center">
                    <i class="fas fa-check mr-2"></i>
                    ¡Cita Reservada!
                </span>
            `;
            submitButton.classList.add('bg-green-600');
            
            // Resetear después de 3 segundos
            setTimeout(() => {
                submitButton.innerHTML = originalText;
                submitButton.classList.remove('bg-green-600');
                submitButton.disabled = false;
                form.reset();
            }, 3000);
        }, 2000);
    });
    
    // Efectos para testimonios
    const testimonialCards = document.querySelectorAll('.testimonial-card');
    testimonialCards.forEach(card => {
        card.addEventListener('mouseenter', function() {
            this.style.transform = 'translateY(-4px) scale(1.02)';
        });
        
        card.addEventListener('mouseleave', function() {
            this.style.transform = 'translateY(0) scale(1)';
        });
    });
    
    // Animación de entrada escalonada
    const observerOptions = {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
    };
    
    const observer = new IntersectionObserver((entries) => {
        entries.forEach((entry, index) => {
            if (entry.isIntersecting) {
                entry.target.style.animationDelay = `${index * 0.1}s`;
                entry.target.style.animation = 'fadeInUp 0.6s ease-out forwards';
                observer.unobserve(entry.target);
            }
        });
    }, observerOptions);
    
    const allElements = document.querySelectorAll('.service-option, .time-slot, .testimonial-card');
    allElements.forEach(element => {
        observer.observe(element);
    });
    
    // Efectos de estrellas animadas
    const stars = document.querySelectorAll('.fa-star');
    stars.forEach((star, index) => {
        star.addEventListener('mouseenter', function() {
            this.style.animation = 'bounce 0.6s ease-in-out';
        });
        
        star.addEventListener('animationend', function() {
            this.style.animation = '';
        });
    });
});
</script>
